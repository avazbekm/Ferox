<Window
    x:Class="Forex.Wpf.Windows.UserWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Forex.Wpf.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Yangi mijoz qo'shish oynasi"
    Width="400"
    Height="270"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Nomi  -->
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,5"
            VerticalAlignment="Center"
            Text="Nomi:" />
        <Border
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,5"
            BorderBrush="#CCC"
            BorderThickness="1"
            CornerRadius="4">
            <TextBox
                x:Name="txtName"
                Padding="4"
                BorderThickness="0"
                FontSize="14" />
        </Border>

        <!--  Telefon  -->
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,5"
            VerticalAlignment="Center"
            Text="Telefon raqami:" />
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,5"
            BorderBrush="#CCC"
            BorderThickness="1"
            CornerRadius="4">
            <TextBox
                x:Name="txtPhone"
                Padding="4"
                BorderThickness="0"
                FontSize="14"
                GotFocus="TxtPhone_GotFocus"
                TextChanged="TxtPhone_TextChanged" />
        </Border>

        <!--  Manzili  -->
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,5"
            VerticalAlignment="Center"
            Text="Manzili:" />
        <Border
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,5"
            BorderBrush="#CCC"
            BorderThickness="1"
            CornerRadius="4">
            <TextBox
                x:Name="txtAddress"
                Padding="4"
                BorderThickness="0"
                FontSize="14" />
        </Border>

        <!--  Boshlang‘ich balans  -->
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="0,5"
            VerticalAlignment="Center"
            Text="Boshlang'ich balans:" />
        <Grid Grid.Row="3" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Border
                    Margin="0,5"
                    BorderBrush="#CCC"
                    BorderThickness="1"
                    CornerRadius="4">
                    <Grid>
                        <TextBox
                            x:Name="txtBeginningSum"
                            Padding="4"
                            BorderThickness="0"
                            FontSize="14"
                            Foreground="Red"
                            Tag="Qarzdorlik" />
                        <TextBlock
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="Red"
                            IsHitTestVisible="False"
                            Text="{Binding ElementName=txtBeginningSum, Path=Tag}"
                            Visibility="{Binding Text.IsEmpty, ElementName=txtBeginningSum, Converter={StaticResource BooleanToVisibility}}" />
                    </Grid>
                </Border>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <Border
                    Margin="0,5"
                    BorderBrush="#CCC"
                    BorderThickness="1"
                    CornerRadius="4">
                    <Grid>
                        <TextBox
                            x:Name="txtBeginningSum2"
                            Padding="4"
                            BorderThickness="0"
                            FontSize="14"
                            Tag="Haqdorlik" />
                        <TextBlock
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="#999"
                            IsHitTestVisible="False"
                            Text="{Binding ElementName=txtBeginningSum2, Path=Tag}"
                            Visibility="{Binding Text.IsEmpty, ElementName=txtBeginningSum2, Converter={StaticResource BooleanToVisibility}}" />
                    </Grid>
                </Border>
            </StackPanel>

        </Grid>

        <!--  Qo‘shimcha ma‘lumot  -->
        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Margin="0,5"
            VerticalAlignment="Center"
            Text="Qo‘shimcha ma‘lumot:" />
        <Border
            Grid.Row="4"
            Grid.Column="1"
            Margin="0,5"
            BorderBrush="#CCC"
            BorderThickness="1"
            CornerRadius="4">
            <TextBox
                x:Name="txtDescription"
                Padding="4"
                BorderThickness="0"
                FontSize="14" />
        </Border>

        <!--  Tugmalar  -->
        <StackPanel
            Grid.Row="6"
            Grid.ColumnSpan="2"
            Margin="0,5,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="btnSave"
                Width="110"
                Height="30"
                Margin="5"
                Click="Button_Click"
                Content="Saqlash">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3B82F6" />
                        <!--  To‘q ko‘k  -->
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="BorderBrush" Value="#2563EB" />
                        <Setter Property="BorderThickness" Value="1" />
                        <Setter Property="Padding" Value="6,3" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Cursor" Value="Hand" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2563EB" />
                                <!--  Hover paytida biroz to‘qroq  -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button
                Width="110"
                Margin="5"
                Content="Bekor qilish"
                IsCancel="True">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#E5E7EB" />
                        <!--  Kulrang  -->
                        <Setter Property="Foreground" Value="#333" />
                        <Setter Property="BorderBrush" Value="#D1D5DB" />
                        <Setter Property="BorderThickness" Value="1" />
                        <Setter Property="Padding" Value="6,3" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Cursor" Value="Hand" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D1D5DB" />
                                <!--  Hover paytida to‘qroq  -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

    </Grid>
</Window>

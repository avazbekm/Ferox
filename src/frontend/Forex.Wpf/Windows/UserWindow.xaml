<Window x:Class="Forex.Wpf.Windows.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forex.Wpf.Windows"
        xmlns:conv="clr-namespace:Forex.Wpf.Common.Converters"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        Title="Yangi mijoz qo'shish oynasi"
        Height="270" Width="400">

    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BooleanToVisibility"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Nomi -->
        <TextBlock Text="Nomi:" Grid.Row="0" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,5"/>
        <Border Grid.Row="0" Grid.Column="1" CornerRadius="4" BorderBrush="#CCC" BorderThickness="1" Margin="0,5">
            <TextBox x:Name="txtName" FontSize="14" BorderThickness="0" Padding="4"/>
        </Border>

        <!-- Telefon -->
        <TextBlock Text="Telefon raqami:" Grid.Row="1" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,5"/>
        <Border Grid.Row="1" Grid.Column="1" CornerRadius="4" BorderBrush="#CCC" BorderThickness="1" Margin="0,5">
            <TextBox x:Name="txtPhone" GotFocus="txtPhone_GotFocus" TextChanged="txtPhone_TextChanged" FontSize="14" BorderThickness="0" Padding="4"/>
        </Border>

        <!-- Manzili -->
        <TextBlock Text="Manzili:" Grid.Row="2" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,5"/>
        <Border Grid.Row="2" Grid.Column="1" CornerRadius="4" BorderBrush="#CCC" BorderThickness="1" Margin="0,5">
            <TextBox x:Name="txtAddress" FontSize="14" BorderThickness="0" Padding="4"/>
        </Border>

        <!-- Boshlang‘ich balans -->
        <TextBlock Text="Boshlang'ich balans:" Grid.Row="3" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,5"/>
        <Grid Grid.Column="1" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Border CornerRadius="4" BorderBrush="#CCC" BorderThickness="1" Margin="0,5">
                    <Grid>
                        <TextBox x:Name="txtBeginningSum"
                                 FontSize="14"
                                 Foreground="Red"
                                 BorderThickness="0"
                                 Padding="4"
                                 Tag="Qarzdorlik"/>
                        <TextBlock Text="{Binding ElementName=txtBeginningSum, Path=Tag}"
                                   Foreground="Red"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="{Binding Text.IsEmpty, ElementName=txtBeginningSum, Converter={StaticResource BooleanToVisibility}}"/>
                    </Grid>
                </Border>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <Border CornerRadius="4" BorderBrush="#CCC" BorderThickness="1" Margin="0,5">
                    <Grid>
                        <TextBox x:Name="txtBeginningSum2"
                                 FontSize="14"
                                 BorderThickness="0"
                                 Padding="4"
                                 Tag="Haqdorlik"/>
                        <TextBlock Text="{Binding ElementName=txtBeginningSum2, Path=Tag}"
                                   Foreground="#999"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="{Binding Text.IsEmpty, ElementName=txtBeginningSum2, Converter={StaticResource BooleanToVisibility}}"/>
                    </Grid>
                </Border>
            </StackPanel>

        </Grid>

        <!-- Qo‘shimcha ma‘lumot -->
        <TextBlock Text="Qo‘shimcha ma‘lumot:" Grid.Row="4" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,5"/>
        <Border Grid.Row="4" Grid.Column="1" CornerRadius="4" BorderBrush="#CCC" BorderThickness="1" Margin="0,5">
            <TextBox x:Name="txtDescription" FontSize="14" BorderThickness="0" Padding="4"/>
        </Border>

        <!-- Tugmalar -->
        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,5,0,0">
            <Button x:Name="btnSave" Content="Saqlash" Click="Button_Click" Width="110" Height="30" Margin="5">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#3B82F6"/>
                        <!-- To‘q ko‘k -->
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="#2563EB"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Padding" Value="6,3"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2563EB"/>
                                <!-- Hover paytida biroz to‘qroq -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Bekor qilish" Width="110" Margin="5" IsCancel="True">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#E5E7EB"/>
                        <!-- Kulrang -->
                        <Setter Property="Foreground" Value="#333"/>
                        <Setter Property="BorderBrush" Value="#D1D5DB"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Padding" Value="6,3"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D1D5DB"/>
                                <!-- Hover paytida to‘qroq -->
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

    </Grid>
</Window>

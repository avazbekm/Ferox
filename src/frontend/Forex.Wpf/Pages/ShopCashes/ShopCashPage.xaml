<Page
    x:Class="Forex.Wpf.Pages.ShopCashes.ShopCashPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Forex.Wpf.Resources.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Forex.Wpf.Pages.ShopCashes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Kassa boshqaruvi"
    d:DesignHeight="700"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Margin="5"
            Content="🏦 Kassa amaliyotlari"
            FontSize="20"
            FontWeight="Bold"
            Foreground="{StaticResource SecondaryTextColor}" />
        <Button
            x:Name="btnBack"
            Grid.Row="0"
            Grid.Column="2"
            Padding="8,4"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            md:ButtonAssist.CornerRadius="4"
            Background="{DynamicResource OtherBackground}"
            Click="BtnBack_Click"
            Content="🔙 Orqaga" />

        <StackPanel
            Grid.Row="1"
            Margin="0,0,0,20"
            HorizontalAlignment="Stretch"
            Orientation="Horizontal">
            <md:Card
                Width="300"
                Height="90"
                Margin="0,0,20,0"
                Foreground="{DynamicResource PrimaryTextColor}"
                UniformCornerRadius="4">
                <StackPanel>
                    <TextBlock
                        Margin="5"
                        HorizontalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="{DynamicResource PrimaryTextColor}"
                        Text="UZS (so'm)" />
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <TextBlock
                            Margin="10,5,10,0"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="{DynamicResource PrimaryTextColor}"
                            Text="Qoldiq:" />
                        <TextBlock
                            x:Name="tbcUzsBalance"
                            Margin="15,5,10,0"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="{DynamicResource PrimaryTextColor}"
                            Text="0.00" />
                    </StackPanel>
                </StackPanel>
            </md:Card>

            <md:Card
                Width="300"
                Height="90"
                Margin="0,0,20,0"
                Foreground="{DynamicResource PrimaryTextColor}"
                UniformCornerRadius="4">
                <StackPanel>
                    <TextBlock
                        Margin="5"
                        HorizontalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="{DynamicResource PrimaryTextColor}"
                        Text="USD (dollar)" />
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <TextBlock
                            Margin="10,5,10,0"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="{DynamicResource PrimaryTextColor}"
                            Text="Qoldiq:" />
                        <TextBlock
                            x:Name="tbcUsdBalance"
                            Margin="15,5,10,0"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="{DynamicResource PrimaryTextColor}"
                            Text="0.00" />
                    </StackPanel>
                </StackPanel>
            </md:Card>
        </StackPanel>

        <Grid
            Grid.Row="2"
            Margin="0,0,0,20">
            <StackPanel Orientation="Vertical">
                <TextBlock
                    Margin="5,0,0,15"
                    FontSize="20"
                    FontWeight="Medium"
                    Text="Kassa kirim, chiqim amaliyoti" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>


                    <controls:UserCalendar
                        Grid.Column="0"
                        x:Name="supplyDate"
                        MinWidth="120"
                        Margin="0,0,5,0"
                        Padding="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="{DynamicResource PrimaryBackground}"
                        FontSize="14"
                        SelectedDate="{Binding OperationDate}" />
                    <!--  Mijoz tanlash  -->
                    <controls:FloatingComboBox
                        x:Name="cbxUser"
                        Grid.Column="1"
                        MinWidth="120"
                        Margin="2,0"
                        IsEditable="True"
                        IsTextSearchEnabled="True"
                        Label="User tanlash" />

                    <!--  Amaliyot turi  -->
                    <controls:FloatingComboBox
                        x:Name="cbxIncome"
                        Grid.Column="2"
                        MinWidth="120"
                        Margin="2,0"
                        IsEditable="True"
                        IsTextSearchEnabled="True"
                        Label="Amaliyot turi" />


                    <!--  Valyuta  -->
                    <controls:FloatingComboBox
                        x:Name="cbxValyutaType"
                        Grid.Column="3"
                        Margin="2,0"
                        IsEditable="True"
                        IsTextSearchEnabled="True"
                        Label="Valyuta" />

                    <!--  Summa  -->
                    <controls:FloatingInput
                        x:Name="tbSum"
                        Grid.Column="4"
                        Margin="2,0"
                        Label="Summa"
                        Text="{Binding Summa, StringFormat=N2}"/>



                    <!--  Izoh  -->
                    <controls:FloatingInput
                        x:Name="tbDescription"
                        Grid.Column="5"
                        Margin="2,0"
                        Label="Izoh"/>

                    <Button
                        x:Name="btnRegister"
                        Grid.Column="6"
                        Margin="5,-2,5,3"
                        md:ButtonAssist.CornerRadius="4"
                        Background="{DynamicResource OtherBackground}"
                        Command="{Binding RecordTransactionCommand}"
                        Content="Saqlash" />
                </Grid>
            </StackPanel>
        </Grid>

        <md:Card
            Grid.Row="3"
            Margin="0,1,0,10"
            UniformCornerRadius="4">
            <StackPanel
                Margin="5"
                HorizontalAlignment="Left"
                Orientation="Horizontal">
                <TextBlock
                    Margin="5,0,20,0"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Medium"
                    Text="Kassa amaliyotlar tarixi" />
                <Border
                    Margin="2,5"
                    Background="{DynamicResource SecondaryBackground}"
                    CornerRadius="4">
                    <controls:UserCalendar
                        x:Name="startDate"
                        Width="150"
                        Margin="5,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Hint="Boshlanish sana"
                        SelectedDate="{Binding OperationDate}" />
                </Border>
                <Border
                    Margin="2,5"
                    Background="{DynamicResource SecondaryBackground}"
                    CornerRadius="4">

                    <controls:UserCalendar
                        x:Name="endDate"
                        Width="150"
                        Margin="5,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Hint="Tugash sana" />
                </Border>
                <Button
                    x:Name="btnShow"
                    Margin="3"
                    md:ButtonAssist.CornerRadius="4"
                    Background="{DynamicResource OtherBackground}"
                    Command="{Binding FilterHistoryCommand}"
                    Content="Ko'rsatish" />
            </StackPanel>
        </md:Card>

        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                <DataGrid
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding FilteredTransactions}">

                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding Date, StringFormat='dd.MM.yyyy HH:mm'}"
                            Header="Sana" />
                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding Type}"
                            Header="Turi" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Amount, StringFormat='N2'}"
                            Header="Summa" />
                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding Currency}"
                            Header="Valyuta" />
                        <DataGridTextColumn
                            Width="2*"
                            Binding="{Binding Note}"
                            Header="Izoh" />
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
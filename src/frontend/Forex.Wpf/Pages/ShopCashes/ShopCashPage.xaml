<Page
    x:Class="Forex.Wpf.Pages.ShopCashes.ShopCashPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Forex.Wpf.Resources.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Forex.Wpf.Pages.ShopCashes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Kassa boshqaruvi"
    d:DesignHeight="700"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Margin="5"
            Content="🏦 Kassa amaliyotlari"
            FontSize="20"
            FontWeight="Bold"
            Foreground="{StaticResource SecondaryTextColor}" />
        <Button
            x:Name="btnBack"
            Grid.Row="0"
            Grid.Column="2"
            Padding="8,4"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            md:ButtonAssist.CornerRadius="4"
            Background="{DynamicResource OtherBackground}"
            Click="BtnBack_Click"
            Content="🔙 Orqaga" />

        <StackPanel
            Grid.Row="1"
            Margin="0,0,0,20"
            HorizontalAlignment="Stretch"
            Orientation="Horizontal">
            <md:Card
                Width="300"
                Height="90"
                Margin="0,0,20,0"
                Foreground="{DynamicResource PrimaryTextColor}"
                UniformCornerRadius="4">
                <StackPanel>
                    <TextBlock
                        Margin="5"
                        HorizontalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="{DynamicResource PrimaryTextColor}"
                        Text="UZS (so'm)" />
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <TextBlock
                            Margin="10,5,10,0"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="{DynamicResource PrimaryTextColor}"
                            Text="Qoldiq:" />
                        <TextBlock
                            x:Name="tbcUzsBalance"
                            Margin="15,5,10,0"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="{DynamicResource PrimaryTextColor}"
                            Text="0.00" />
                    </StackPanel>
                </StackPanel>
            </md:Card>

            <md:Card
                Width="300"
                Height="90"
                Margin="0,0,20,0"
                Foreground="{DynamicResource PrimaryTextColor}"
                UniformCornerRadius="4">
                <StackPanel>
                    <TextBlock
                        Margin="5"
                        HorizontalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="{DynamicResource PrimaryTextColor}"
                        Text="USD (dollar)" />
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                        <TextBlock
                            Margin="10,5,10,0"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="{DynamicResource PrimaryTextColor}"
                            Text="Qoldiq:" />
                        <TextBlock
                            x:Name="tbcUsdBalance"
                            Margin="15,5,10,0"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="{DynamicResource PrimaryTextColor}"
                            Text="0.00" />
                    </StackPanel>
                </StackPanel>
            </md:Card>
        </StackPanel>

        <Grid Grid.Row="2"
              Margin="0,0,0,20">
            <StackPanel Orientation="Vertical">
                <TextBlock
                    Margin="5,0,0,15"
                    FontSize="20"
                    FontWeight="Medium"
                    Text="Kassa kirim, chiqim amaliyoti" />

                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <!-- Chap ustun -->
                        <ColumnDefinition Width="*" />
                        <!-- O‘ng ustun -->
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Sana / Hisob -->
                        <RowDefinition Height="Auto"/>
                        <!-- Mijoz / Joriy -->
                        <RowDefinition Height="Auto"/>
                        <!-- Kirim / Qoldiq -->
                        <RowDefinition Height="Auto"/>
                        <!-- Summa / Valyuta -->
                        <RowDefinition Height="Auto"/>
                        <!-- Izoh / To‘lash sana -->
                        <RowDefinition Height="Auto"/>
                        <!-- Qo‘shimcha izoh -->
                        <RowDefinition Height="Auto"/>
                        <!-- Tugma -->
                    </Grid.RowDefinitions>

                    <!-- 1-qator -->
                    <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Sana:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <controls:UserCalendar Grid.Column="1"
                                               x:Name="supplyDate"
                                               MinWidth="150"
                                               SelectedDate="{Binding OperationDate}"/>
                    </Grid>

                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="Hisob:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <controls:FloatingComboBox
                            x:Name="cbxAccount"
                            MinWidth="180"
                            Label="Hisob tanlash"
                            IsEditable="True"
                            IsTextSearchEnabled="True"/>
                    </StackPanel>

                    <!-- 2-qator -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,5,10,0">
                        <TextBlock Text="Mijoz:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <controls:FloatingComboBox
                            x:Name="cbxUser"
                            MinWidth="180"
                            Label="Mijoz tanlash"
                            IsEditable="True"
                            IsTextSearchEnabled="True"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Joriy:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock x:Name="txtCurrent" Text="{Binding CurrentBalance, StringFormat=N2}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- 3-qator -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="0,5,10,0">
                        <TextBlock Text="Kirim:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <controls:FloatingInput
                            x:Name="tbIncome"
                            MinWidth="180"
                            Label="Kirim"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Qoldiq:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock x:Name="txtBalance" Text="{Binding Balance, StringFormat=N2}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- 4-qator -->
                    <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Margin="0,5,10,0">
                        <TextBlock Text="Summa:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <controls:FloatingInput
                            x:Name="tbSum"
                            MinWidth="150"
                            Label="Summa"
                            Text="{Binding Summa, StringFormat=N2}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Valyuta turi:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <controls:FloatingComboBox
                            x:Name="cbxValyutaType"
                            MinWidth="150"
                            Label="Valyuta"
                            IsEditable="True"
                            IsTextSearchEnabled="True"/>
                    </StackPanel>

                    <!-- 5-qator -->
                    <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Horizontal" Margin="0,5,10,0">
                        <TextBlock Text="Izoh:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <controls:FloatingInput
                            x:Name="tbDescription"
                            MinWidth="200"
                            Label="Izoh"/>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="To‘lash sana:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <controls:UserCalendar
                            x:Name="paymentDate"
                            MinWidth="150"
                            SelectedDate="{Binding PaymentDate}"/>
                    </StackPanel>

                    <!-- 6-qator -->
                    <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Qo‘shimcha izoh:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <controls:FloatingInput
                            x:Name="tbExtraNote"
                            MinWidth="200"
                            Label="Qo‘shimcha izoh"/>
                    </StackPanel>

                    <!-- 7-qator -->
                    <Button
                        Grid.Row="6"
                        Grid.ColumnSpan="2"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Right"
                        Width="100"
                        Height="30"
                        md:ButtonAssist.CornerRadius="6"
                        Background="{DynamicResource OtherBackground}"
                        Command="{Binding RecordTransactionCommand}"
                        Content="Saqlash"/>
                </Grid>
            </StackPanel>
        </Grid>

        <md:Card
            Grid.Row="3"
            Margin="0,1,0,10"
            UniformCornerRadius="4">
            <StackPanel
                Margin="5"
                HorizontalAlignment="Left"
                Orientation="Horizontal">
                <TextBlock
                    Margin="5,0,20,0"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Medium"
                    Text="Kassa amaliyotlar tarixi" />
                <Border
                    Margin="2,5"
                    Background="{DynamicResource SecondaryBackground}"
                    CornerRadius="4">
                    <controls:UserCalendar
                        x:Name="startDate"
                        Width="150"
                        Margin="5,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Hint="Boshlanish sana"
                        SelectedDate="{Binding OperationDate}" />
                </Border>
                <Border
                    Margin="2,5"
                    Background="{DynamicResource SecondaryBackground}"
                    CornerRadius="4">

                    <controls:UserCalendar
                        x:Name="endDate"
                        Width="150"
                        Margin="5,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Hint="Tugash sana" />
                </Border>
                <Button
                    x:Name="btnShow"
                    Margin="3"
                    md:ButtonAssist.CornerRadius="4"
                    Background="{DynamicResource OtherBackground}"
                    Command="{Binding FilterHistoryCommand}"
                    Content="Ko'rsatish" />
            </StackPanel>
        </md:Card>

        <Grid Grid.Row="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                <DataGrid
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding FilteredTransactions}">

                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding Date, StringFormat='dd.MM.yyyy HH:mm'}"
                            Header="Sana" />
                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding Type}"
                            Header="Turi" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Amount, StringFormat='N2'}"
                            Header="Summa" />
                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding Currency}"
                            Header="Valyuta" />
                        <DataGridTextColumn
                            Width="2*"
                            Binding="{Binding Note}"
                            Header="Izoh" />
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
<Page
    x:Class="Forex.Wpf.Pages.Products.ProductPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Forex.Wpf.Resources.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Forex.Wpf.Pages.Products"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="ProductsPage"
    d:DesignHeight="580"
    d:DesignWidth="810"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  DataGrid cell style  -->
        <Style x:Key="TransparentCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="BorderBrush" Value="Transparent" />
        </Style>

        <Style x:Key="InlineTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="InlineComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Page.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  == header:: sahifa nomi va ortga tugmasi ==  -->
            <RowDefinition Height="10" />

            <RowDefinition Height="*" />
            <!--  == body:: asosiy ma'lumotlar ==  -->
            <RowDefinition Height="10" />

            <RowDefinition Height="Auto" />
            <!--  == footer:: submit tugmasi ==  -->
        </Grid.RowDefinitions>

        <!--  Page Header  -->
        <DockPanel LastChildFill="False">
            <Label
                Content="Mahsulotlar kirim oynasi"
                FontSize="18"
                FontWeight="Bold"
                Foreground="{StaticResource SecondaryTextColor}" />

            <Button
                x:Name="btnBack"
                Padding="8,0"
                md:ButtonAssist.CornerRadius="4"
                md:ElevationAssist.Elevation="Dp24"
                Background="{DynamicResource BackButtonBackground}"
                BorderBrush="{StaticResource BackButtonBorder}"
                Click="BtnBack_Click"
                Content="🔙 Orqaga"
                DockPanel.Dock="Right"
                Foreground="{StaticResource BackButtonForeground}" />
        </DockPanel>

        <!--  Main Content  -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition
                    Width="*"
                    MinWidth="200"
                    MaxWidth="400" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical">
                <!--  == Ishchilar DataGrid ==  -->
                <Border
                    Margin="0,0,0,10"
                    Background="AliceBlue"
                    CornerRadius="4">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="50"
                            Direction="270"
                            Opacity="0.2"
                            ShadowDepth="15"
                            Color="Black" />
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="4" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  Header  -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="40" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                Margin="10,2"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource PrimaryTextColor}"
                                Text="Hodimlar" />
                            <Button
                                Grid.Column="1"
                                Padding="4"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding AddEmployeeCommand}"
                                Content="➕"
                                Foreground="{StaticResource PrimaryTextColor}" />
                        </Grid>

                        <DataGrid
                            x:Name="dgEmployees"
                            Grid.Row="2"
                            Height="220"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            EnableColumnVirtualization="True"
                            EnableRowVirtualization="True"
                            HeadersVisibility="Column"
                            IsReadOnly="False"
                            ItemsSource="{Binding Employees}"
                            RowHeaderWidth="0"
                            RowHeight="36"
                            SelectedItem="{Binding SelectedEmployee, Mode=TwoWay}"
                            VirtualizingPanel.IsVirtualizing="True"
                            VirtualizingPanel.VirtualizationMode="Recycling">
                            <DataGrid.Resources>
                                <!--  🔹 Header’larni markazlashtirish uchun umumiy style  -->
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    <Setter Property="VerticalContentAlignment" Value="Center" />
                                </Style>
                                <!--  🔹 O‘ngga hizalangan sonlar uchun umumiy style  -->
                                <Style x:Key="RightAlignedText" TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Right" />
                                    <Setter Property="Margin" Value="0,0,5,0" />
                                </Style>

                            </DataGrid.Resources>

                            <DataGrid.Columns>

                                <!--  👤 Hodim  -->
                                <DataGridTemplateColumn Width="*" Header="Hodim">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox
                                                Height="25"
                                                Padding="5,0"
                                                BorderThickness="0"
                                                DisplayMemberPath="Name"
                                                FontSize="14"
                                                IsEditable="True"
                                                ItemsSource="{Binding DataContext.AvailableEmployees, RelativeSource={RelativeSource AncestorType=Page}}"
                                                SelectedItem="{Binding Selected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!--  ☎️ Telefon  -->
                                <DataGridTextColumn
                                    Width="0.7*"
                                    Binding="{Binding Phone}"
                                    Header="Telefon"
                                    IsReadOnly="True" />

                                <!--  🏠 Manzil  -->
                                <DataGridTextColumn
                                    Width="1.5*"
                                    Binding="{Binding Address}"
                                    Header="Manzil"
                                    IsReadOnly="True" />

                                <!--  💰 Balans  -->
                                <DataGridTextColumn
                                    Width="150"
                                    Binding="{Binding Balance, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N2}}"
                                    ElementStyle="{StaticResource RightAlignedText}"
                                    Header="Balans"
                                    IsReadOnly="True" />

                                <!--  ⚙️ Actions  -->
                                <DataGridTemplateColumn Width="0.2*" Header="">
                                    <DataGridTemplateColumn.CellStyle>
                                        <StaticResource ResourceKey="TransparentCellStyle" />
                                    </DataGridTemplateColumn.CellStyle>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <controls:ActionButton
                                                Margin="0,0,10,0"
                                                HorizontalContentAlignment="Right"
                                                CommandParameter="{Binding}"
                                                DeleteCommand="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                EditCommand="{Binding DataContext.EditUserCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                IsEditing="{Binding IsEditing, Mode=TwoWay}"
                                                SaveCommand="{Binding DataContext.SaveUserCommand, RelativeSource={RelativeSource AncestorType=Page}}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>


                            </DataGrid.Columns>
                        </DataGrid>

                    </Grid>
                </Border>

                <!--  == Product DataGrid ==  -->
                <Border Background="AliceBlue" CornerRadius="4">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="50"
                            Direction="280"
                            Opacity="0.2"
                            ShadowDepth="15"
                            Color="Black" />
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="4" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="40" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                Margin="10,2"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource PrimaryTextColor}"
                                Text="Mahsulotlar" />

                            <Button
                                Grid.Column="1"
                                Height="28"
                                Margin="10,0"
                                Padding="4"
                                Background="{DynamicResource PrimaryBackground}"
                                BorderBrush="{StaticResource BackButtonBorder}"
                                BorderThickness="0"
                                Command="{Binding ShowAllProductsCommand}"
                                Content="Barchasini ko'rsatish"
                                Foreground="{StaticResource BackButtonForeground}" />

                            <Button
                                Grid.Column="2"
                                Padding="4"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding AddProductCommand}"
                                Content="➕"
                                Foreground="{StaticResource PrimaryTextColor}" />
                        </Grid>

                        <DataGrid
                            Grid.Row="2"
                            MinHeight="300"
                            AutoGenerateColumns="False"
                            Background="#f1f1f1"
                            BorderThickness="0"
                            CanUserAddRows="False"
                            EnableColumnVirtualization="True"
                            EnableRowVirtualization="False"
                            HeadersVisibility="Column"
                            IsReadOnly="False"
                            ItemsSource="{Binding FilteredProducts}"
                            RowHeaderWidth="0"
                            RowHeight="36"
                            ScrollViewer.CanContentScroll="True"
                            SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
                            SnapsToDevicePixels="True"
                            UseLayoutRounding="True"
                            VirtualizingPanel.IsVirtualizing="True"
                            VirtualizingPanel.VirtualizationMode="Recycling">

                            <DataGrid.Resources>
                                <!--  🔹 Headerlarni o‘rtaga joylashtirish  -->
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    <Setter Property="VerticalContentAlignment" Value="Center" />
                                    <Setter Property="FontWeight" Value="SemiBold" />
                                </Style>

                                <!--  🔹 O‘ngga hizalangan sonlar uchun umumiy style  -->
                                <Style x:Key="RightAlignedText" TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Right" />
                                    <Setter Property="Margin" Value="0,0,5,0" />
                                </Style>
                            </DataGrid.Resources>

                            <DataGrid.Columns>

                                <!--  🖼️ Rasm  -->
                                <DataGridTemplateColumn Width="100" Header="Rasm">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image
                                                Width="80"
                                                Height="80"
                                                Source="{Binding Product.Image, Converter={StaticResource ImageFallbackConverter}}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!--  🔢 Kod  -->
                                <DataGridTemplateColumn Width="0.8*" Header="Kod">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox
                                                Padding="20,0,0,0"
                                                BorderThickness="0"
                                                DisplayMemberPath="Code"
                                                IsTextSearchEnabled="True"
                                                ItemsSource="{Binding DataContext.AvailableProducts, RelativeSource={RelativeSource AncestorType=Page}}"
                                                SelectedItem="{Binding Product, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!--  🧾 Nomi  -->
                                <DataGridTemplateColumn Width="1.5*" Header="Nomi">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox
                                                Padding="0"
                                                BorderThickness="0"
                                                DisplayMemberPath="Name"
                                                IsTextSearchEnabled="True"
                                                ItemsSource="{Binding DataContext.AvailableProducts, RelativeSource={RelativeSource AncestorType=Page}}"
                                                SelectedItem="{Binding Product, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!--  📏 O‘lcham  -->
                                <DataGridTemplateColumn Width="*" Header="O'lcham">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox
                                                Padding="20,0,0,0"
                                                BorderThickness="0"
                                                DisplayMemberPath="Type"
                                                IsTextSearchEnabled="True"
                                                ItemsSource="{Binding AvailableProductTypes}"
                                                SelectedItem="{Binding ProductType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!--  📦 Miqdorlar  -->
                                <DataGridTextColumn
                                    Width="0.5*"
                                    Binding="{Binding ProductType.Count, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"
                                    ElementStyle="{StaticResource RightAlignedText}"
                                    Header="Soni"
                                    IsReadOnly="True" />

                                <!--  Razmerlar soni  -->
                                <DataGridTextColumn
                                    Width="0.8*"
                                    Binding="{Binding BundleCount, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"
                                    ElementStyle="{StaticResource RightAlignedText}"
                                    Header="Razmerlar soni" />

                                <!--  Jami soni  -->
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding TotalCount, StringFormat={}{0:N0}}"
                                    ElementStyle="{StaticResource RightAlignedText}"
                                    Header="Jami soni"
                                    IsReadOnly="True" />

                                <!--  Dona haqi  -->
                                <DataGridTextColumn
                                    Width="0.8*"
                                    Binding="{Binding PreparationCostPerUnit, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:N0}}"
                                    ElementStyle="{StaticResource RightAlignedText}"
                                    Header="Dona haqi" />

                                <!--  Jami summa  -->
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding TotalAmount, StringFormat={}{0:N2}}"
                                    ElementStyle="{StaticResource RightAlignedText}"
                                    Header="Jami summa"
                                    IsReadOnly="True" />

                                <!--  ⚙️ Actions  -->
                                <DataGridTemplateColumn Width="0.2*" Header="">
                                    <DataGridTemplateColumn.CellStyle>
                                        <StaticResource ResourceKey="TransparentCellStyle" />
                                    </DataGridTemplateColumn.CellStyle>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <controls:ActionButton
                                                Margin="0,0,10,0"
                                                HorizontalContentAlignment="Center"
                                                CommandParameter="{Binding}"
                                                DeleteCommand="{Binding DataContext.DeleteProductCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                EditCommand="{Binding DataContext.EditProductCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                IsEditing="{Binding IsEditing, Mode=TwoWay}"
                                                SaveCommand="{Binding DataContext.SaveProductCommand, RelativeSource={RelativeSource AncestorType=Page}}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </StackPanel>

            <!--  RIGHT PANEL: Invoice va Supplier ma'lumotlari  -->
            <Border
                Grid.Column="2"
                Padding="10"
                Background="#f1f1f1"
                CornerRadius="4">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="50"
                        Direction="300"
                        Opacity="0.3"
                        ShadowDepth="15"
                        Color="Black" />
                </Border.Effect>

                <StackPanel Orientation="Vertical" Visibility="{Binding SelectedProduct, Converter={StaticResource NullToVisibility}}">

                    <TextBlock
                        x:Name="tbcProductName"
                        Margin="3,0,0,0"
                        HorizontalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="{StaticResource PrimaryTextColor}"
                        Text="{Binding SelectedProduct.Product.Name}" />

                    <TextBlock
                        x:Name="tbcDetail"
                        Margin="5,2,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource PrimaryTextColor}"
                        Text="mahsulotini tayyorlashga ketadigan yarim tayyor mahsulotlar ro'yxati"
                        TextWrapping="Wrap"
                        Visibility="{Binding DetailTextVisibility}" />

                    <ListView
                        Height="200"
                        Margin="0"
                        Background="White"
                        BorderBrush="#DDD"
                        BorderThickness="1"
                        ItemsSource="{Binding SelectedProduct.ProductType.ProductTypeItems}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Mahsulot">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                Padding="0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                Foreground="Black"
                                                Text="{Binding SemiProduct.Name}" />

                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="Miqdori">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                Padding="0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                Foreground="Black"
                                                Text="{Binding Quantity}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Header="O‘lchov birligi">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                Padding="0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="14"
                                                Text="{Binding SemiProduct.UnitMeasure.Name}"
                                                ToolTip="{Binding SemiProduct.UnitMeasure.Description}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Border>
        </Grid>

        <!--  Submit Button  -->
        <Button
            Grid.Row="4"
            HorizontalAlignment="Right"
            md:ElevationAssist.Elevation="Dp24"
            Background="{StaticResource SuccessButtonBackground}"
            BorderBrush="{StaticResource SuccessButtonBorder}"
            Command="{Binding SubmitCommand}"
            Content="Yuborish"
            Foreground="{StaticResource SuccessButtonForeground}" />
    </Grid>
</Page>

        <Button
            x:Name="btnBack"
            Grid.Row="0"
            Margin="0,0,0,10"
            Padding="8,4"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            md:ButtonAssist.CornerRadius="4"
            Background="{DynamicResource OtherBackground}"
            Click="BtnBack_Click"
            Content="🔙 Orqaga" />


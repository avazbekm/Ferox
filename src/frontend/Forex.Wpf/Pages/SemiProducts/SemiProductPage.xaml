<Page x:Class="Forex.Wpf.Pages.SemiProducts.SemiProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Forex.Wpf.Pages.SemiProducts"
      xmlns:controls="clr-namespace:Forex.Wpf.Resources.UserControls"
      xmlns:converters="clr-namespace:Forex.Wpf.Common.Converters"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      Loaded="Page_Loaded"
      d:DesignHeight="580"
      d:DesignWidth="810"
      Title="Kirim qilish">

    <Grid Margin="15">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel LastChildFill="False">

            <Label Content="Yarim tayyor mahsulotlarni kirim qilish"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="{StaticResource SecondaryTextColor}" />

            <Button x:Name="btnBack"
                    Content="🔙 Orqaga"
                    DockPanel.Dock="Right"
                    Padding="8 0"
                    md:ButtonAssist.CornerRadius="4"
                    Background="{DynamicResource BackButtonBackground}"
                    Foreground="{StaticResource BackButtonForeground}"
                    BorderBrush="{StaticResource BackButtonBorder}"
                    Click="BtnBack_Click"
                    md:ElevationAssist.Elevation="Dp24" />
        </DockPanel>
        <!-- MAIN CONTENT -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"
                                  MaxWidth="400"
                                  MinWidth="200" />
                <!-- Aside qismi (chap tarafi) -->
                <ColumnDefinition Width="10" />
                <!---->
                <ColumnDefinition Width="2.5*" />
                <!-- Content oyna (mahsulot va yarim tayyor) -->
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL (Invoice + Supplier info) -->
            <Border CornerRadius="4"
                    Panel.ZIndex="1"
                    Padding="10 0"
                    Background="AliceBlue">
                <Border.Effect>
                    <DropShadowEffect Color="Black"
                                      Opacity="0.3"
                                      BlurRadius="50"
                                      ShadowDepth="15"
                                      Direction="250" />
                </Border.Effect>
                <StackPanel Orientation="Vertical">
                    <Label Content="Invoice"
                           Foreground="{StaticResource PrimaryTextColor}"
                           FontSize="15"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center" />

                    <!-- Kirim sanasi -->
                    <DockPanel>
                        <Label Content="Sana:"
                               DockPanel.Dock="Left"
                               Foreground="{StaticResource PrimaryTextColor}" />
                        <TextBlock Text="{Binding Invoice.Date}"
                                   DockPanel.Dock="Right"
                                   Foreground="{StaticResource PrimaryTextColor}" />
                    </DockPanel>

                    <!-- Cost price -->
                    <DockPanel>
                        <Label Content="Tan narxi:"
                               DockPanel.Dock="Left"
                               Foreground="{StaticResource PrimaryTextColor}" />
                        <TextBlock Text="{Binding Invoice.CostPrice}"
                                   DockPanel.Dock="Right"
                                   Foreground="{StaticResource PrimaryTextColor}" />
                    </DockPanel>

                    <DockPanel>
                        <Label Content="Yetkazish xizmati:"
                               DockPanel.Dock="Left"
                               Foreground="{StaticResource PrimaryTextColor}" />
                        <TextBlock Text="{Binding Invoice.CostDelivery}"
                                   DockPanel.Dock="Right"
                                   Foreground="{StaticResource PrimaryTextColor}" />
                    </DockPanel>

                    <DockPanel>
                        <Label Content="Yuboruvchi xizmati:"
                               DockPanel.Dock="Left"
                               Foreground="{StaticResource PrimaryTextColor}" />
                        <TextBlock Text="{Binding Invoice.TransferFee}"
                                   DockPanel.Dock="Right"
                                   Foreground="{StaticResource PrimaryTextColor}" />
                    </DockPanel>

                    <Separator />

                    <!-- Kirim qilinayotgan zavod -->

                    <Label Content="Qabul qiluvchi"
                           HorizontalAlignment="Center"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource PrimaryTextColor}" />

                    <ComboBox Text="{Binding Invoice.Date}"
                              DockPanel.Dock="Right"
                              Margin="20 0"
                              Foreground="{StaticResource PrimaryTextColor}" />

                    <Separator Margin="0 10 0 0" />

                    <!-- Ta'minotchi ma'lumotlari -->
                    <Label Content="Ta'minotchi ma'lumotlari"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource PrimaryTextColor}" />

                    <DockPanel>
                        <Label Content="Nomi:"
                               DockPanel.Dock="Left"
                               Foreground="{StaticResource PrimaryTextColor}" />
                        <ComboBox Text="{Binding Invoice.Date}"
                                  DockPanel.Dock="Right"
                                  Foreground="{StaticResource PrimaryTextColor}" />
                    </DockPanel>

                    <DockPanel>
                        <Label Content="Telefon:"
                               DockPanel.Dock="Left"
                               Foreground="{StaticResource PrimaryTextColor}" />
                        <TextBlock Text="{Binding Supplier.Phone}"
                                   DockPanel.Dock="Right"
                                   Foreground="{StaticResource PrimaryTextColor}" />
                    </DockPanel>

                    <DockPanel>
                        <Label Content="Email:"
                               DockPanel.Dock="Left"
                               Foreground="{StaticResource PrimaryTextColor}" />
                        <TextBlock Text="{Binding Supplier.Email}"
                                   DockPanel.Dock="Right"
                                   Foreground="{StaticResource PrimaryTextColor}" />
                    </DockPanel>

                    <DockPanel>
                        <Label Content="Manzil:"
                               DockPanel.Dock="Left"
                               Foreground="{StaticResource PrimaryTextColor}" />
                        <TextBlock Text="{Binding Supplier.Address}"
                                   DockPanel.Dock="Right"
                                   Foreground="{StaticResource PrimaryTextColor}" />
                    </DockPanel>

                    <DockPanel>
                        <Label Content="O'rtakash orqalimi:"
                               DockPanel.Dock="Left"
                               Foreground="{StaticResource PrimaryTextColor}" />
                        <ToggleButton />
                    </DockPanel>

                    <Separator />

                    <!-- O'rtakash uchun hisob kitob -->
                    <Label Content="Kontiner hisobi"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource PrimaryTextColor}" />

                    <DockPanel>
                        <Label Content="Kontinerlar soni:"
                               DockPanel.Dock="Left"
                               Foreground="{StaticResource PrimaryTextColor}" />
                        <TextBlock Text="{Binding ConteinerCount}"
                                   DockPanel.Dock="Right"
                                   Foreground="{StaticResource PrimaryTextColor}" />
                    </DockPanel>

                    <DockPanel>
                        <Label Content="To'lov (donasi uchun):"
                               DockPanel.Dock="Left"
                               Foreground="{StaticResource PrimaryTextColor}" />
                        <TextBlock Text="{Binding ConteinerCount}"
                                   DockPanel.Dock="Right"
                                   Foreground="{StaticResource PrimaryTextColor}" />
                    </DockPanel>

                </StackPanel>
            </Border>


            <!-- RIGHT (Content) -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <!-- Mahsulotlar -->
                    <RowDefinition Height="10" MaxHeight="50"/>
                    <!---->
                    <RowDefinition Height="*" />
                    <!-- Yarim tayyor mahsulotrar -->
                    <RowDefinition Height="10" />
                    <!---->
                    <RowDefinition Height="Auto" />
                    <!-- Yuborish tugmasi -->
                </Grid.RowDefinitions>

                
                <!-- PRODUCT DATA GRID -->
                <Border CornerRadius="4"
                        Background="AliceBlue">
                    <Border.Effect>
                        <DropShadowEffect Color="Black"
                                          Opacity="0.2"
                                          BlurRadius="50"
                                          ShadowDepth="15"
                                          Direction="270" />
                    </Border.Effect>
                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <!-- Header -->
                            <RowDefinition Height="4" />
                            <!---->
                            <RowDefinition Height="*" />
                            <!-- DataGrid -->
                        </Grid.RowDefinitions>

                        <!-- Header with Title + Add button -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Foreground="{StaticResource PrimaryTextColor}"
                                       VerticalAlignment="Center"
                                       Margin="10 0"
                                       Text="Maxsulotlar"
                                       FontWeight="SemiBold"
                                       FontSize="14" />

                            <Button Grid.Column="1"
                                    Content="➕"
                                    Background="Transparent"
                                    Foreground="{StaticResource PrimaryTextColor}"
                                    Command="{Binding AddProductCommand}"
                                    Padding="4"
                                    Width="30"
                                    BorderThickness="0" />

                        </Grid>

                        <!-- Products -->
                        <DataGrid Grid.Row="3"
                                    RowHeight="36"
                                    AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    Foreground="{StaticResource PrimaryTextColor}"
                                    HeadersVisibility="Column"
                                    RowHeaderWidth="0"
                                    IsReadOnly="True"
                                    ItemsSource="{Binding Products}">

                            <DataGrid.Resources>
                                <converters:InverseBoolToBoolConverter x:Key="InverseBoolToBoolConverter" />
                            </DataGrid.Resources>

                            <DataGrid.Columns>

                                <!-- Image preview -->
                                <DataGridTemplateColumn Width="Auto">
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="Padding" Value="0" />
                                            <Setter Property="Margin" Value="0" />
                                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                                            <Setter Property="VerticalContentAlignment" Value="Center" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                            <Setter Property="BorderThickness" Value="0" />
                                            <Setter Property="BorderBrush" Value="Transparent" />
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Source="{Binding PreviewImage}"
                                                    Width="30"
                                                    Height="30"
                                                    Stretch="UniformToFill"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"
                                                    SnapsToDevicePixels="True" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Name -->
                                <DataGridTemplateColumn Header="Nomi" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolToBoolConverter}}"
                                                        BorderThickness="0"
                                                        Background="Transparent"
                                                        Padding="0"
                                                        VerticalAlignment="Center" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Code -->
                                <DataGridTemplateColumn Header="Kod" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding Code, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolToBoolConverter}}"
                                                        BorderThickness="0"
                                                        Background="Transparent"
                                                        Padding="0"
                                                        VerticalAlignment="Center" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Measure -->
                                <DataGridTemplateColumn Header="O‘lchov" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding Measure, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolToBoolConverter}}"
                                                        BorderThickness="0"
                                                        Background="Transparent"
                                                        Padding="0"
                                                        VerticalAlignment="Center" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Count -->
                                <DataGridTemplateColumn Header="Soni" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding Count, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     IsReadOnly="{Binding IsEditing, Converter={StaticResource InverseBoolToBoolConverter}}"
                                                        BorderThickness="0"
                                                        Background="Transparent"
                                                        Padding="0"
                                                        VerticalAlignment="Center" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Actions -->
                                <DataGridTemplateColumn Width="Auto">
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="Padding" Value="0" />
                                            <Setter Property="Margin" Value="0" />
                                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                                            <Setter Property="VerticalContentAlignment" Value="Center" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                            <Setter Property="BorderThickness" Value="0" />
                                            <Setter Property="BorderBrush" Value="Transparent" />
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <controls:ActionButton 
                                                EditCommand="{Binding DataContext.EditProductCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                DeleteCommand="{Binding DataContext.RemoveProductCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                SaveCommand="{Binding DataContext.SaveProductCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                                   CommandParameter="{Binding}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                            </DataGrid.Columns>
                        </DataGrid>


                    </Grid>
                </Border>
                
                
                <!-- SEMI PRODUCT DATA GRID -->
                <Border CornerRadius="4"
                        Background="AliceBlue"
                        Grid.Row="2">
                    <Border.Effect>
                        <DropShadowEffect Color="Black"
                                          Opacity="0.2"
                                          BlurRadius="50"
                                          ShadowDepth="15"
                                          Direction="220" />
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <!-- Header -->
                            <RowDefinition Height="4" />
                            <!---->
                            <RowDefinition Height="*" />
                            <!-- DataGrid -->
                        </Grid.RowDefinitions>

                        <!-- Header with Title + Add button -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Foreground="{StaticResource PrimaryTextColor}"
                                       VerticalAlignment="Center"
                                       Margin="10 0"
                                       Text="Yarim tayyor maxsulotlar"
                                       FontWeight="SemiBold"
                                       FontSize="14" />

                            <Button Grid.Column="1"
                                    Content="➕"
                                    Background="Transparent"
                                    Foreground="{StaticResource PrimaryTextColor}"
                                    Command="{Binding AddSemiProductCommand}"
                                    Padding="4"
                                    Width="30"
                                    BorderThickness="0" />

                        </Grid>

                        <!-- Products -->
                        <DataGrid Grid.Row="3"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  HeadersVisibility="Column"
                                  Foreground="{StaticResource PrimaryTextColor}"
                                  RowHeaderWidth="0"
                                  IsReadOnly="True"
                                  ItemsSource="{Binding SemiProducts}">

                            <DataGrid.Columns>

                                <DataGridTemplateColumn Width="Auto">
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="Padding" Value="0" />
                                            <Setter Property="Margin" Value="0" />
                                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                                            <Setter Property="VerticalContentAlignment" Value="Center" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                            <Setter Property="BorderThickness" Value="0" />
                                            <Setter Property="BorderBrush" Value="Transparent" />
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image Source="{Binding PreviewImage}"
                                                   Width="30"
                                                   Height="30"
                                                   Stretch="UniformToFill"
                                                   Margin="4"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   SnapsToDevicePixels="True" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <DataGridTextColumn Header="Nomi" Binding="{Binding Name}" Width="*" />
                                <DataGridTextColumn Header="Kod" Binding="{Binding Code}" Width="*" />
                                <DataGridTextColumn Header="O‘lchov" Binding="{Binding Measure}" Width="*" />
                                <DataGridTextColumn Header="Soni" Binding="{Binding Count}" Width="*" />
                                <DataGridTextColumn Header="Jami" Binding="{Binding Total}" Width="*" />

                                <!-- Actions tugmasi -->
                                <DataGridTemplateColumn Width="Auto">
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="Padding" Value="0" />
                                            <Setter Property="Margin" Value="0" />
                                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                                            <Setter Property="VerticalContentAlignment" Value="Center" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                            <Setter Property="BorderThickness" Value="0" />
                                            <Setter Property="BorderBrush" Value="Transparent" />
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <controls:ActionButton EditCommand="{Binding DataContext.EditSemiProductCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                                   DeleteCommand="{Binding DataContext.RemoveSemiProductCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                                   CommandParameter="{Binding}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>


                <!-- SUBMIT BUTTON -->
                <Button Grid.Row="4"
                        HorizontalAlignment="Right"
                        Background="{StaticResource SuccessButtonBackground}"
                        Foreground="{StaticResource SuccessButtonForeground}"
                        BorderBrush="{StaticResource SuccessButtonBorder}"
                        Content="Yuborish"
                        md:ElevationAssist.Elevation="Dp24" />

            </Grid>
        </Grid>
    </Grid>
</Page>

<Page x:Class="Forex.Wpf.Pages.Home.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Forex.Wpf.Pages.Home"
      mc:Ignorable="d" 
      d:DesignHeight="570" d:DesignWidth="810"
      Title="HomePage"
      Loaded="Page_Loaded">

    <StackPanel Background="{DynamicResource PrimaryBackground}">
        <Border x:Name="mainMenu"
                Background="#FF4FC3F7"
                md:ElevationAssist.Elevation="Dp8"
                Height="60"
                Margin="10"
                CornerRadius="10"
                Padding="0,0,10,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Chap taraf: logotip yoki sarlavha -->
                <Border VerticalAlignment="Center"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        Width="120"
                        Height="45"
                        CornerRadius="10"
                        md:ElevationAssist.Elevation="Dp2">
                    <Border.Background>
                        <ImageBrush ImageSource="/Assets/logo.png"
                                    Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>

                <!-- O‘ng taraf: ism + chiqish -->
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Margin="10">
                    
                    <TextBlock Text="{Binding FullName}" 
                               FontSize="16" 
                               Foreground="White" 
                               VerticalAlignment="Center"
                               Margin="0 0 10 0"/>
                    
                    <Button Content="🚪 Chiqish"
                            Background="#FF1565C0"
                            Foreground="White"
                            Padding="6,2"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            md:ButtonAssist.CornerRadius="6"
                            Click="BtnLogout_Click"/>
                </StackPanel>
            </Grid>
        </Border>


        <WrapPanel Margin="35 20">
            <Button x:Name="btnUser" 
                    md:ElevationAssist.Elevation="Dp24" 
                    MinWidth="220" 
                    md:ButtonAssist.CornerRadius="10"  
                    Background="#FF1565C0"
                    Foreground="{DynamicResource PrimaryTextColor}" 
                    FontSize="24" 
                    FontWeight="Medium" 
                    Margin="10" 
                    Height="120" 
                    Click="BtnUser_Click">
                👤 User
            </Button>

            <Button x:Name="btnProduct" 
                    md:ElevationAssist.Elevation="Dp24"
                    MinWidth="220"
                    md:ButtonAssist.CornerRadius="10"
                    Background="#FF2E7D32"
                    Foreground="{DynamicResource PrimaryTextColor}"
                    FontSize="24"
                    FontWeight="Medium"
                    Margin="10"
                    Height="120"
                    Click="BtnProduct_Click">
                👟 Mahsulot
            </Button>

            <Button x:Name="btnCash" 
                    md:ElevationAssist.Elevation="Dp24"
                    MinWidth="220"
                    md:ButtonAssist.CornerRadius="10"
                    Background="#FF005F73"
                    Foreground="{DynamicResource PrimaryTextColor}"
                    FontSize="24"
                    FontWeight="Medium"
                    Margin="10"
                    Height="120"
                    Click="BtnCash_Click">
                💵 Kassa
            </Button>

            <Button x:Name="btnSale"
                    md:ElevationAssist.Elevation="Dp24"
                    MinWidth="220"
                    md:ButtonAssist.CornerRadius="10"
                    Background="#FF00C9A7"
                    Foreground="{DynamicResource PrimaryTextColor}"
                    FontSize="24"
                    FontWeight="Medium"
                    Margin="10"
                    Height="120"
                    Click="BtnSale_Click">
                🛒 Sotuv
            </Button>

            <Button x:Name="btnSaleHistory" 
                    md:ElevationAssist.Elevation="Dp24"
                    MinWidth="220"
                    md:ButtonAssist.CornerRadius="10"
                    Background="#FF4527A0"
                    Foreground="{DynamicResource PrimaryTextColor}"
                    FontSize="24"
                    FontWeight="Medium"
                    Margin="10"
                    Height="120"
                    Click="BtnSaleHistory_Click">
                📜 Sotuv tarixi
            </Button>

            <Button x:Name="btnSemiProductEntry" 
                    md:ElevationAssist.Elevation="Dp24"
                    MinWidth="220"
                    md:ButtonAssist.CornerRadius="10"
                    Background="#FF8E24AA"
                    Foreground="{DynamicResource PrimaryTextColor}"
                    FontSize="24"
                    FontWeight="Medium"
                    Margin="10"
                    Height="120"
                    Click="BtnSemiProduct_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center">📦</TextBlock>
                    <TextBlock TextWrapping="Wrap" 
                                TextAlignment="Center">
                        Yarim tayyor<LineBreak/>mahsulot
                    </TextBlock>
                </StackPanel>
            </Button>

            <Button x:Name="btnSettings" 
                    md:ElevationAssist.Elevation="Dp24"
                    MinWidth="220"
                    md:ButtonAssist.CornerRadius="10"
                    Background="#FFC62828"
                    Foreground="{DynamicResource PrimaryTextColor}"
                    FontSize="24"
                    FontWeight="Medium"
                    Margin="10"
                    Height="120"
                    Click="BtnSettings_Click">
                ⚙️ Sozlash
            </Button>

        </WrapPanel>
    </StackPanel>
</Page>

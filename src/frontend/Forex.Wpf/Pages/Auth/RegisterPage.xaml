<Page x:Class="Forex.Wpf.Pages.Auth.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Forex.Wpf.Pages.Auth"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid Background="#1E1E2F">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border x:Name="RegisterPanel"
                Width="400"
                Padding="20"
                Background="#2D2D44"
                CornerRadius="12"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Opacity="0"
                Effect="{DynamicResource MaterialDesignElevationShadow8}">
            <StackPanel>
                <TextBlock Text="Create account 📝" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

                <TextBox x:Name="tbName"
                         FontSize="16"
                         Margin="0,0,0,10"
                         Padding="8"
                         md:HintAssist.Hint="Full name"
                         BorderThickness="0"
                         Background="#3A3A55"
                         Foreground="White"/>

                <TextBox x:Name="tbEmail"
                         FontSize="16"
                         Margin="0,0,0,10"
                         Padding="8"
                         md:HintAssist.Hint="Email"
                         BorderThickness="0"
                         Background="#3A3A55"
                         Foreground="White"/>

                <TextBox x:Name="tbPhone"
                         FontSize="16"
                         Margin="0,0,0,10"
                         Padding="8"
                         md:HintAssist.Hint="Phone"
                         BorderThickness="0"
                         Background="#3A3A55"
                         Foreground="White"/>

                <PasswordBox x:Name="pbPassword"
                             FontSize="16"
                             Margin="0,0,0,10"
                             Padding="8"
                             md:HintAssist.Hint="Password"
                             BorderThickness="0"
                             Background="#3A3A55"
                             Foreground="White"/>

                <PasswordBox x:Name="pbConfirm"
                             FontSize="16"
                             Margin="0,0,0,10"
                             Padding="8"
                             md:HintAssist.Hint="Confirm password"
                             BorderThickness="0"
                             Background="#3A3A55"
                             Foreground="White"/>

                <Button x:Name="btnRegister"
                        Content="📝 Register"
                        Background="#4C8EF7"
                        Foreground="White"
                        FontWeight="Bold"
                        Padding="8"
                        BorderThickness="0"
                        md:ButtonAssist.CornerRadius="6"
                        Click="BtnRegister_Click"/>

                <Button x:Name="btnGoLogin"
                        Content="Back to login"
                        Background="Transparent"
                        Foreground="#AABBDD"
                        BorderThickness="0"
                        Margin="0,10,0,0"
                        Click="BtnGoLogin_Click"/>

                <TextBlock x:Name="lblError"
                           Foreground="Crimson"
                           Visibility="Collapsed"
                           Margin="0,10,0,0"
                           TextWrapping="Wrap"/>

                <TextBlock x:Name="lblOk"
                           Foreground="LightGreen"
                           Visibility="Collapsed"
                           Margin="0,5,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Animatsiya -->
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Grid.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="RegisterPanel"
                                         Storyboard.TargetProperty="Opacity"
                                         From="0" To="1" Duration="0:0:1"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
    </Grid>
</Page>

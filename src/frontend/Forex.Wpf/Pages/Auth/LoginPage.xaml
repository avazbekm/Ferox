<Page x:Class="Forex.Wpf.Pages.Auth.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Forex.Wpf.Pages.Auth"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="500"
      Title="LoginPage"
      Loaded="Page_Loaded">

    <Grid Background="#1E1E2F">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border x:Name="LoginPanel"
                Width="360"
                Padding="20"
                Background="#2D2D44"
                CornerRadius="12"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Opacity="0"
                Effect="{DynamicResource MaterialDesignElevationShadow8}">
            <StackPanel>
                <TextBlock Text="Welcome back 👋" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

                <TextBox x:Name="tbLogin"
                         FontSize="16"
                         Margin="0,0,0,10"
                         Padding="8"
                         md:HintAssist.Hint="Email yoki telefon"
                         BorderThickness="0"
                         Background="#3A3A55"
                         Foreground="White"/>

                <PasswordBox x:Name="pbPassword"
                             FontSize="16"
                             Margin="0,0,0,10"
                             Padding="8"
                             md:HintAssist.Hint="Parol"
                             BorderThickness="0"
                             Background="#3A3A55"
                             Foreground="White"/>

                <CheckBox x:Name="chRemember"
                          Content="Remember me"
                          Foreground="White"
                          Margin="0,0,0,10"/>

                <Button x:Name="btnLogin"
                        Content="🔐 Login"
                        Background="#4C8EF7"
                        Foreground="White"
                        FontWeight="Bold"
                        Padding="8"
                        BorderThickness="0"
                        md:ButtonAssist.CornerRadius="6"
                        Click="BtnLogin_Click"/>

                <Button x:Name="btnGoRegister"
                        Content="Create account"
                        Background="Transparent"
                        Foreground="#AABBDD"
                        BorderThickness="0"
                        Margin="0,10,0,0"
                        Click="BtnGoRegister_Click"/>

                <TextBlock x:Name="lblError"
                           Foreground="Crimson"
                           Visibility="Collapsed"
                           Margin="0,10,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Animatsiya -->
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Grid.Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetName="LoginPanel"
                                         Storyboard.TargetProperty="Opacity"
                                         From="0" To="1" Duration="0:0:1"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>
    </Grid>
</Page>

<Page x:Class="Forex.Wpf.Pages.Sales.SalePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Forex.Wpf.Pages.Sales.ViewModels"
      xmlns:controls="clr-namespace:Forex.Wpf.Resources.UserControls"
      xmlns:commons="clr-namespace:Forex.Wpf.Common.Services"

      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SalePage"  Background="{DynamicResource PrimaryBackground}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="10 0">
            <TextBlock Text="🛒 Savdo bo'limi"
                       FontSize="18"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="{DynamicResource PrimaryTextColor}"/>
            
            <Button x:Name="btnBack"
                    BorderThickness="0"
                    md:ButtonAssist.CornerRadius="5"
                    Background="{DynamicResource OtherBackground}"
                    Content="🔙 Orqaga"
                    ToolTip="Orqaga"
                    Grid.Row="0"
                    HorizontalAlignment="Right"/>
        </Grid>

        <!-- Body -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="500"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="6"/>
                </Grid.RowDefinitions>

                <!-- Labels -->
                <Label Grid.Row="0" Content="Sana:" VerticalAlignment="Center" FontSize="14" Margin="5,0,0,0"/>
                <Label Grid.Row="1" Content="Mijoz:" VerticalAlignment="Center" FontSize="14" Margin="5,0,0,0"/>
                <Label Grid.Row="2" Content="Summa:" VerticalAlignment="Center" FontSize="14" Margin="5,0,0,0"/>
                <Label Grid.Row="3" Content="Izox:" VerticalAlignment="Center" FontSize="14" Margin="5,0,0,0"/>

                <!-- Sana -->
                <Grid Grid.Row="0"
                      Grid.Column="1">
                    <controls:UserCalendar x:Name="supplyDate"
                                           SelectedDate="{Binding OperationDate}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Width="120"
                                           FontSize="14"
                                           Padding="0"
                                           Background="{DynamicResource PrimaryBackground}"
                                           Margin="0,0,5,0" />
                </Grid>

                <!-- Mijoz -->
                <Grid Grid.Row="1" Grid.Column="1">
                    <Border CornerRadius="4" BorderThickness="1" BorderBrush="{DynamicResource PrimaryTextColor}" Margin="0,2,0,2">
                        <ComboBox ItemsSource="{Binding Customers}"
                                  SelectedItem="{Binding SelectedCustomer}"
                                  DisplayMemberPath="Name"
                                  Padding="5 1"
                                  IsEditable="True"
                                  IsTextSearchEnabled="True"
                                  BorderThickness="0"
                                  GotFocus="ComboBox_GotFocus"
                                  Text="{Binding CustomerName, UpdateSourceTrigger=PropertyChanged}"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Stretch"
                                  FontSize="14"
                                  KeyDown="ComboBox_KeyDown"/>

                    </Border>
                </Grid>

                <!-- Valyuta turi -->
                <Grid Grid.Row="2" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" CornerRadius="4" BorderThickness="1" BorderBrush="{DynamicResource PrimaryTextColor}" Margin="0,2,10,2">
                        <TextBox x:Name="TotalSum"
                                 Text="{Binding TotalAmount,StringFormat={}{0:N2}}"
                                 VerticalAlignment="Stretch"
                                 TextAlignment="Right"
                                 Padding="3 0"
                                 HorizontalAlignment="Stretch"
                                 FontSize="14"
                                 BorderThickness="0"
                                 IsReadOnly="True"
                                 IsTabStop="False"/>

                    </Border>

                    <Label Grid.Column="1" Content="To'lashga:" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="14"/>

                    <Border Grid.Column="2" CornerRadius="4" BorderThickness="1" BorderBrush="{DynamicResource PrimaryTextColor}" Margin="0,2,0,2">
                        <TextBox x:Name="finalSumm"
                                 Text="{Binding FinalAmount,StringFormat={}{0:N2}}"
                                 TextAlignment="Right"
                                 Padding="3 0"
                                 BorderThickness="0"
                                 VerticalAlignment="Stretch"
                                 HorizontalAlignment="Stretch"
                                 FontSize="14"
                                 IsReadOnly="True"
                                 IsTabStop="False"/>
                    </Border>
                </Grid>

                <!-- Chegirma -->
                <Grid Grid.Row="4" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>


                    <!--<Label Grid.Column="1" Content="Yuborish" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="14" Margin="1,0,0,0"/>-->
                    <Button x:Name="btnSend"
                            Grid.Column="2"
                            Padding="0"
                            BorderThickness="0"
                            Content="Yuborish"
                            Background="{DynamicResource OtherBackground}"
                            BorderBrush="{DynamicResource PrimaryTextColor}"
                            Height="24"
                            Command="{Binding SubmitCommand}"
                            md:ButtonAssist.CornerRadius="4"/>
                </Grid>

                <!-- Izox -->
                <Grid Grid.Row="3" Grid.Column="1">
                    <Border CornerRadius="4" BorderThickness="1" BorderBrush="{DynamicResource PrimaryTextColor}" Margin="0,2">
                        <TextBox x:Name="noteTextBox"
                                 Text="{Binding Description}"
                                 BorderThickness="0"
                                 TextAlignment="Left"
                                 Padding="3 0"
                                 VerticalAlignment="Stretch"
                                 HorizontalAlignment="Stretch"
                                 FontSize="14"/>
                    </Border>
                </Grid>
            </Grid>
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Mijoz hisobi:"
                           FontSize="12"
                           Padding="0"
                           FontWeight="Bold"
                           FontStyle="Italic"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                
                <TextBlock Grid.Row="1" Text="Joriy:" VerticalAlignment="Center"/>
                <TextBox x:Name="beginBalans"
                         Grid.Row="1"
                         IsReadOnly="True"
                         Text="{Binding BeginBalance,StringFormat={}{0:N2}}"
                         IsTabStop="False"
                         Padding="0"
                         Background="Transparent"
                         HorizontalAlignment="Right"
                         BorderThickness="0"
                         FontSize="12"
                         Margin="35,2,2,2"/>
                
                <TextBlock Grid.Row="2" Text="Qoldiq:" VerticalAlignment="Center"/>
                <TextBox x:Name="lastBalans"
                         Grid.Row="2"
                         IsReadOnly="True"
                         Padding="0"
                         Text="{Binding LastBalance,StringFormat={}{0:N2}}"
                         Background="Transparent"
                         HorizontalAlignment="Right"
                         BorderThickness="0"
                         FontSize="12"
                         Margin="35,2,2,2"/>
                
                <TextBlock Grid.Row="3" Text="Telefon:" VerticalAlignment="Center"/>
                <TextBox x:Name="tel"
                         Grid.Row="3"
                         Text="{Binding SelectedCustomer.Phone}"
                         IsReadOnly="True"
                         IsTabStop="False"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="0"
                         HorizontalAlignment="Right"
                         FontSize="12" Margin="42,2,2,2"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" Margin="0 5 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="120"/>
                <ColumnDefinition Width="1.5*" MinWidth="100"/>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Mahsulot kodi -->

            <controls:FloatingComboBox x:Name="cbxProductCode"
                                       Label="Kodi"
                                       ItemsSource="{Binding Products}"
                                       Text="{Binding Product.ProductCode}"
                                       IsTextSearchEnabled="True"
                                       Margin="10 0 2 0" />

            <!-- Mahsulot nomi -->
            <controls:FloatingComboBox x:Name="cbxProductName"
                                       Grid.Column="1"
                                       Label="Nomi"
                                       ItemsSource="{Binding Products}"
                                       Text="{Binding Product.ProductName}"
                                       IsTextSearchEnabled="True"
                                       Margin="2 0" />

            <!-- Razmer -->
            <controls:FloatingComboBox x:Name="cbxRazmerType"
                                       Grid.Column="2"
                                       Label="Turi"
                                       ItemsSource="{Binding ProductItems}"
                                       Text="{Binding Type.Type}"
                                       IsTextSearchEnabled="True"
                                       Margin="2 0" />

            <!-- Razmer soni -->
            <controls:FloatingInput x:Name="tbxRazmerCount"
                                    Grid.Column="3"
                                    Label="Razmer soni"
                                    Text="{Binding CurrentSaleItem.TypeCount, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="2 0" />
            <!-- Jami soni -->
            <controls:FloatingInput x:Name="tbxQuantity"
                                    Grid.Column="4"
                                    Label="Jami soni"
                                    Text="{Binding CurrentSaleItem.Count, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="2 0" />

            <!-- Narxi -->
            <controls:FloatingInput x:Name="tbxPrice"
                                    Grid.Column="5"
                                    Label="Narxi"
                                    Text="{Binding CurrentSaleItem.Price, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="2 0" />

            <!-- Jami summa -->
            <controls:FloatingInput x:Name="tbxSum"
                                    Grid.Column="6"
                                    Label="Jami summa"
                                    Text="{Binding CurrentSaleItem.TotalAmount, UpdateSourceTrigger=PropertyChanged}"
                                    Margin="2 0" />
            <Button x:Name="addButton"
                    Grid.Column="7"
                    Height="30"
                    Margin=" 2 0 7 0"
                    Background="{DynamicResource OtherBackground}"
                    md:ButtonAssist.CornerRadius="4"
                    Content="Qo'shish"
                    FontSize="14"
                    Command="{Binding AddCommand}"/>
        </Grid>
        <Grid Grid.Row="3" Margin="0,5,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="67*"/>
                <ColumnDefinition Width="93*"/>
            </Grid.ColumnDefinitions>
            <DataGrid x:Name="dataGrid"
                      ItemsSource="{Binding SaleItems}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="True"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      FontSize="14" Grid.ColumnSpan="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Kod"
                                        Binding="{Binding ProductCode}"
                                        Width="*" MinWidth="80"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Nomi"
                                        Binding="{Binding ProductName}"
                                        Width="1.5*" MinWidth="100"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Razmer"
                                        Binding="{Binding Type}"
                                        Width="*"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Razmer soni"
                                        Binding="{Binding TypeCount,StringFormat={}{0:N0}}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Jami soni"
                                        Binding="{Binding Quantity,StringFormat={}{0:N0}}"
                                        Width="*"
                                        IsReadOnly="True"/>
                    <DataGridTextColumn Header="Narxi"
                                        Binding="{Binding Price,StringFormat={}{0:N2}}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Jami summa"
                                        Binding="{Binding TotalAmount,StringFormat={}{0:N2}}"
                                        Width="*"
                                        IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>


    </Grid>
</Page>

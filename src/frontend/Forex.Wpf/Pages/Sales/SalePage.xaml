<Page x:Class="Forex.Wpf.Pages.Sales.SalePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Forex.Wpf.Pages.Sales"
      xmlns:controls="clr-namespace:Forex.Wpf.Resources.UserControls"
      xmlns:commons="clr-namespace:Forex.Wpf.Common.Services"
      
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SalePage"  Background="{DynamicResource PrimaryBackground}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="38"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="5 0">
            <TextBlock Text="🛒 Savdo bo'limi" 
                       FontSize="18" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="{DynamicResource PrimaryTextColor}"/>
            <Button x:Name="btnBack"
                BorderThickness="0"
                md:ButtonAssist.CornerRadius="5"
                Background="{DynamicResource OtherBackground}"
                Content="🔙 Orqaga"
                ToolTip="Orqaga"
                Grid.Row="0"
                HorizontalAlignment="Right"/>
        </Grid>

        <!-- Body -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="500"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="6"/>
                </Grid.RowDefinitions>

                <!-- Labels -->
                <Label Grid.Row="0" Grid.Column="0" Content="Sana:" VerticalAlignment="Center" FontSize="14" Margin="5,0,0,0"/>
                <Label Grid.Row="1" Grid.Column="0" Content="Mijoz:" VerticalAlignment="Center" FontSize="14" Margin="5,0,0,0"/>
                <Label Grid.Row="2" Grid.Column="0" Content="Jami sum:" VerticalAlignment="Center" FontSize="14" Margin="5,0,0,0"/>
                <Label Grid.Row="3" Grid.Column="0" Content="Izox:" VerticalAlignment="Center" FontSize="14" Margin="5,0,0,0"/>

                <!-- Sana -->
                <Grid Grid.Row="0" Grid.Column="1">
                    <Border CornerRadius="4" HorizontalAlignment="Left" Width="125" BorderThickness="1" BorderBrush="{DynamicResource PrimaryTextColor}" Margin="0,2,2,2">
                        <controls:UserCalendar x:Name="supplyDate"
                                  SelectedDate="{Binding OperationDate}"
                                  VerticalAlignment="Center" 
                                  HorizontalAlignment="Left"
                                  Width="120" FontSize="14"
                                  Background="{DynamicResource PrimaryBackground}"
                                  Margin="2,0,5,0" />
                    </Border>
                </Grid>

                <!-- Mijoz -->
                <Grid Grid.Row="1" Grid.Column="1">
                    <Border CornerRadius="4" BorderThickness="1" BorderBrush="{DynamicResource PrimaryTextColor}" Margin="0,2,0,2">
                        <ComboBox x:Name="CustomerName" 
                                  IsEditable="True"
                                  Padding="5 1"
                                  BorderThickness="0"
                                  Text="{Binding CustomerName}"
                                  VerticalAlignment="Center" 
                                  HorizontalAlignment="Stretch"
                                  FontSize="14"
                                  commons:ComboBoxTabBehavior.EnableTabOnSelect="True"/>
                    </Border>
                </Grid>

                <!-- Valyuta turi -->
                <Grid Grid.Row="2" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" CornerRadius="4" BorderThickness="1" BorderBrush="{DynamicResource PrimaryTextColor}" Margin="0,2,10,2">
                        <TextBox x:Name="TotalSum"
                                 Text="{Binding TotalSum}"
                                 VerticalAlignment="Stretch" 
                                 HorizontalAlignment="Stretch"
                                 FontSize="14"
                                 BorderThickness="0"
                                 IsReadOnly="True"
                                 IsTabStop="False"/>

                    </Border>

                    <Label Grid.Column="1" Content="To'lashga:" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="14"/>

                    <Border Grid.Column="2" CornerRadius="4" BorderThickness="1" BorderBrush="{DynamicResource PrimaryTextColor}" Margin="0,2,0,2">
                        <TextBox x:Name="finalSumm" 
                                Text="{Binding FinalSum, Mode=TwoWay}"
                                BorderThickness="0"
                                VerticalAlignment="Stretch" 
                                HorizontalAlignment="Stretch"
                                FontSize="14"
                                IsReadOnly="True" 
                                IsTabStop="False"/>
                    </Border>
                </Grid>

                <!-- Chegirma -->
                <Grid Grid.Row="4" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                
                    <!--<Label Grid.Column="1" Content="Yuborish" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="14" Margin="1,0,0,0"/>-->
                        <Button x:Name="btnSend" 
                                Grid.Column="2" 
                                Padding="0"
                                BorderThickness="0"
                                Content="Yuborish" 
                                Background="{DynamicResource OtherBackground}"  
                                BorderBrush="{DynamicResource PrimaryTextColor}" 
                                Height="24" 
                                md:ButtonAssist.CornerRadius="4"/>
                </Grid>

                <!-- Izox -->
                <Grid Grid.Row="3" Grid.Column="1">
                    <Border CornerRadius="4" BorderThickness="1" BorderBrush="{DynamicResource PrimaryTextColor}" Margin="0,2">
                        <TextBox x:Name="noteTextBox" 
                                 Text="{Binding Description}"
                                 BorderThickness="0"
                                 VerticalAlignment="Stretch" 
                                 HorizontalAlignment="Stretch"
                                 FontSize="14"/>
                    </Border>
                </Grid>
            </Grid>
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Mijoz hisobi:" 
                       FontSize="12" FontWeight="Bold" FontStyle="Italic" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
                <TextBlock Grid.Row="1" Text="Joriy:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" x:Name="beginBalans" 
                             IsReadOnly="True" IsTabStop="False"
                             Background="Transparent"
                             HorizontalContentAlignment="Right"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"
                             BorderThickness="0"
                         FontSize="12" Margin="35,2,2,2"/>
                <TextBlock Grid.Row="2" Text="Qoldiq:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" x:Name="lastBalans" 
                             IsReadOnly="True" IsTabStop="False"
                             Background="Transparent"
                             HorizontalContentAlignment="Right"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"
                             BorderThickness="0"
                         FontSize="12" Margin="35,2,2,2"/>
                <TextBlock Grid.Row="3" Text="Telefon:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="3" x:Name="tel" 
                             IsReadOnly="True" IsTabStop="False"
                             Background="Transparent"
                             BorderThickness="0"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Center"
                         FontSize="12" Margin="42,2,2,2"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="120"/>
                <ColumnDefinition Width="1.5*" MinWidth="100"/>
                <ColumnDefinition Width="*" MaxWidth="100"/>
                <ColumnDefinition Width="*" MaxWidth="100"/>
                <ColumnDefinition Width="*" MaxWidth="100"/>
                <ColumnDefinition Width="*" MaxWidth="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Mahsulot kodi -->
            <TextBlock Grid.Column="0" 
                       Foreground="{DynamicResource PrimaryTextColor}" 
                       FontSize="14" Text="Mahsulot kodi"
                       Style="{StaticResource FloatingLabelStyle}"
                       Tag="{Binding ElementName=cbxProductCode}"
                       IsHitTestVisible="False" Panel.ZIndex="1"/>
            <Border Grid.Column="0" CornerRadius="4" BorderThickness="1" BorderBrush="{DynamicResource PrimaryTextColor}" Margin="1,3">
                <ComboBox x:Name="cbxProductCode"
                          Text="{Binding CategoryName}"
                          IsEditable="True"
                          FontSize="14"
                          Margin="1 1 2 1"
                          BorderThickness="0"/>
            </Border>

            <!-- Mahsulot nomi -->
            <TextBlock Grid.Column="1" Foreground="{DynamicResource PrimaryTextColor}" FontSize="14" Text="Mahsulot nomi"
                       Style="{StaticResource FloatingLabelStyle}"
                       Tag="{Binding ElementName=cbxProductName}"
                       IsHitTestVisible="False" Panel.ZIndex="1"/>
            <Border Grid.Column="1" CornerRadius="4" BorderThickness="1" BorderBrush="{DynamicResource PrimaryTextColor}" Margin="1,3">
                <ComboBox x:Name="cbxProductName"
                          Text="{Binding ProductName}"
                          IsEditable="True"
                          FontSize="14"
                          BorderThickness="0"/>
            </Border>

            <!-- Razmer -->
            <TextBlock Grid.Column="2" Foreground="{DynamicResource PrimaryTextColor}" FontSize="14" Text="Razmer"
       Style="{StaticResource FloatingLabelStyle}"
       Tag="{Binding ElementName=cbxPerRollCount}"
       IsHitTestVisible="False" Panel.ZIndex="1"/>
            <Border Grid.Column="2" CornerRadius="4" BorderThickness="1" BorderBrush="{DynamicResource PrimaryTextColor}" Margin="1,3">
                <ComboBox x:Name="cbxPerRollCount"
          Text="{Binding PerRollCount}"
          IsEditable="True"
          FontSize="14"
          BorderThickness="0"/>
            </Border>

            <!-- Razmer soni -->
            <TextBlock Grid.Column="3" Foreground="{DynamicResource PrimaryTextColor}" FontSize="14" Text="Razmer soni"
       Style="{StaticResource FloatingLabelStyle}"
       Tag="{Binding ElementName=txtRollCount}"
       IsHitTestVisible="False" Panel.ZIndex="1"/>
            <Border Grid.Column="3" CornerRadius="4" BorderThickness="1" BorderBrush="{DynamicResource PrimaryTextColor}" Margin="1,3">
                <TextBox x:Name="txtRollCount"
         Text="{Binding RollCount}"
         FontSize="14"
         BorderThickness="0"/>
            </Border>

            <!-- Jami soni -->
            <TextBlock Grid.Column="4" Foreground="{DynamicResource PrimaryTextColor}" FontSize="14" Text="Jami soni"
       Style="{StaticResource FloatingLabelStyle}"
       Tag="{Binding ElementName=txtQuantity}"
       IsHitTestVisible="False" Panel.ZIndex="1"/>
            <Border Grid.Column="4" CornerRadius="4" BorderThickness="1" BorderBrush="{DynamicResource PrimaryTextColor}" Margin="1,3">
                <TextBox x:Name="txtQuantity"
         Text="{Binding Quantity}"
         FontSize="14"
         BorderThickness="0"/>
            </Border>

            <!-- Narxi -->
            <TextBlock Grid.Column="5" Foreground="{DynamicResource PrimaryTextColor}" FontSize="14" Text="Narxi"
       Style="{StaticResource FloatingLabelStyle}"
       Tag="{Binding ElementName=txtPrice}"
       IsHitTestVisible="False" Panel.ZIndex="1"/>
            <Border Grid.Column="5" CornerRadius="4" BorderThickness="1" BorderBrush="{DynamicResource PrimaryTextColor}" Margin="1,3">
                <TextBox x:Name="txtPrice"
         Text="{Binding Price}"
         FontSize="14"
         BorderThickness="0"/>
            </Border>

            <!-- Jami summa -->
            <TextBlock Grid.Column="6" Foreground="{DynamicResource PrimaryTextColor}" FontSize="14" Text="Jami summa"
       Style="{StaticResource FloatingLabelStyle}"
       Tag="{Binding ElementName=txtSum}"
       IsHitTestVisible="False" Panel.ZIndex="1"/>
            <Border Grid.Column="6" CornerRadius="4" BorderThickness="1" BorderBrush="{DynamicResource PrimaryTextColor}" Margin="1,3">
                <TextBox x:Name="txtSum"
         Text="{Binding Sum}"
         FontSize="14"
         BorderThickness="0"/>
            </Border>


            <!-- Umumiy summa -->
            <TextBlock Grid.Column="7" Foreground="{DynamicResource PrimaryTextColor}" FontSize="14" Text="Umumiy summa"
       Style="{StaticResource FloatingLabelStyle}"
       Tag="{Binding ElementName=txtFinalSumProduct}"
       IsHitTestVisible="False" Panel.ZIndex="1"/>
            <Border Grid.Column="7" CornerRadius="4" BorderThickness="1" BorderBrush="{DynamicResource PrimaryTextColor}" Margin="1,3">
                <TextBox x:Name="txtFinalSumProduct"
         Text="{Binding FinalSumProduct}"
         FontSize="14"
         BorderThickness="0"/>
            </Border>

            <!-- Qo'shish tugmasi -->
                <Button x:Name="addButton"
                        Grid.Column="8"
                        Padding="0"
                        Margin="2 3"
                        Background="{DynamicResource OtherBackground}"
                        md:ButtonAssist.CornerRadius="4"
                        Content="Qo'shish"
                        FontSize="14"
                        Click="AddButton_Click"/>   
        </Grid>
        <Grid Grid.Row="3" Margin="0,5,0,5">
            <DataGrid x:Name="dataGrid" 
                  ItemsSource="{Binding SaleItems}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  FontSize="14">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Maxsulot turi" 
                             Binding="{Binding CategoryName}" 
                             Width="*" MinWidth="80"/>
                    <DataGridTextColumn Header="Mahsulot kodi" 
                             Binding="{Binding ProductName}" 
                             Width="1.5*" MinWidth="100"/>
                    <DataGridTextColumn Header="Razmer" 
                             Binding="{Binding PerRollCount}" 
                             Width="*"/>
                    <DataGridTextColumn Header="Razmer soni" 
                             Binding="{Binding RollCount}" 
                             Width="*"/>
                    <DataGridTextColumn Header="Jami dona" 
                             Binding="{Binding Quantity}" 
                             Width="*"/>
                    <DataGridTextColumn Header="Narxi" 
                             Binding="{Binding Price}" 
                             Width="*"/>
                    <DataGridTextColumn Header="Jami summa" 
                             Binding="{Binding Sum}" 
                             Width="*"/>
                    <DataGridTextColumn Header="Umumiy summa" 
                             Binding="{Binding FinalSumProduct}" 
                             Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>


    </Grid>
</Page>

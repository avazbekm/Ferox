<Page x:Name="RootPage"
      x:Class="Forex.Wpf.Pages.Sales.SalePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:commons="clr-namespace:Forex.Wpf.Common.Services"
      xmlns:controls="clr-namespace:Forex.Wpf.Resources.UserControls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Forex.Wpf.Pages.Sales.ViewModels"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="SalePage"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Background="{DynamicResource PrimaryBackground}"
      mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <!--== header:: Back button ==-->
            <RowDefinition Height="120" />
            <!--== Mijoz ma'lumotlari ==-->
            <RowDefinition Height="50" />
            <!--== Kiritilayotgan sale item ma'lumotlari qatori ==-->
            <RowDefinition Height="*" />
            <!--== DataGrid ==-->
            <RowDefinition Height="50" />
            <!--== footer::Submit button ==-->

        </Grid.RowDefinitions>

        <!--  Header  -->
        <Grid Grid.Row="0"
              Margin="10,0">
            <TextBlock HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryTextColor}"
                       Text="🛒 Savdo bo'limi" />

            <Button x:Name="btnBack"
                    Grid.Row="0"
                    HorizontalAlignment="Right"
                    Click="BtnBack_Click"
                    md:ButtonAssist.CornerRadius="5"
                    Background="{DynamicResource OtherBackground}"
                    BorderThickness="0"
                    Content="🔙 Orqaga"
                    ToolTip="Orqaga" />
        </Grid>

        <!--  Body  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"
                                  MaxWidth="500" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Labels  -->
                <Label Grid.Row="0"
                       Margin="5,0,0,0"
                       VerticalAlignment="Center"
                       Content="Sana:"
                       FontSize="14" />
                <Label Grid.Row="1"
                       Margin="5,0,0,0"
                       VerticalAlignment="Center"
                       Content="Mijoz:"
                       FontSize="14" />
                <Label Grid.Row="2"
                       Margin="5,0,0,0"
                       VerticalAlignment="Center"
                       Content="Summa:"
                       FontSize="14" />
                <Label Grid.Row="3"
                       Margin="5,0,0,0"
                       VerticalAlignment="Center"
                       Content="Izox:"
                       FontSize="14" />

                <!--  Sana  -->
                <Grid Grid.Row="0"
                      Grid.Column="1">
                    <controls:UserCalendar x:Name="supplyDate"
                                           Width="120"
                                           Margin="0,0,5,0"
                                           Padding="0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Background="{DynamicResource PrimaryBackground}"
                                           FontSize="14"
                                           SelectedDate="{Binding OperationDate}" />
                </Grid>

                <!--  Mijoz  -->
                <Grid Grid.Row="1"
                      Grid.Column="1">
                    <Border Margin="0,2,0,2"
                            BorderBrush="{DynamicResource PrimaryTextColor}"
                            BorderThickness="1"
                            CornerRadius="4">
                        <ComboBox Padding="5,1"
                                  x:Name="customerComboBox"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Center"
                                  BorderThickness="0"
                                  DisplayMemberPath="Name"
                                  FontSize="14"
                                  IsEditable="True"
                                  Text="{Binding CustomerInput, Mode=TwoWay }"
                                  IsTextSearchEnabled="True"
                                  ItemsSource="{Binding AvailableCustomers}"
                                  SelectedItem="{Binding Customer}"/>

                    </Border>
                </Grid>

                <!--  Valyuta turi  -->
                <Grid Grid.Row="2"
                      Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Margin="0,2,10,2"
                            BorderBrush="{DynamicResource PrimaryTextColor}"
                            BorderThickness="1"
                            CornerRadius="4">
                        <TextBox x:Name="TotalSum"
                                 Padding="3,0"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch"
                                 BorderThickness="0"
                                 FontSize="14"
                                 IsReadOnly="True"
                                 IsTabStop="False"
                                 Text="{Binding TotalAmount, StringFormat={}{0:N2}}"
                                 TextAlignment="Right" />

                    </Border>

                    <Label Grid.Column="1"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Content="To'lashga:"
                           FontSize="14" />

                    <Border Grid.Column="2"
                            Margin="0,2,0,2"
                            BorderBrush="{DynamicResource PrimaryTextColor}"
                            BorderThickness="1"
                            CornerRadius="4">
                        <TextBox x:Name="finalSumm"
                                 Padding="3,0"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch"
                                 BorderThickness="0"
                                 FontSize="14"
                                 IsReadOnly="True"
                                 IsTabStop="False"
                                 Text="{Binding FinalAmount, StringFormat={}{0:N2}}"
                                 TextAlignment="Right" />
                    </Border>
                </Grid>

                <!--  Izox  -->
                <Grid Grid.Row="3"
                      Grid.Column="1">
                    <Border Margin="0,2"
                            BorderBrush="{DynamicResource PrimaryTextColor}"
                            BorderThickness="1"
                            CornerRadius="4">
                        <TextBox x:Name="noteTextBox"
                                 Padding="3,0"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch"
                                 BorderThickness="0"
                                 FontSize="14"
                                 Text="{Binding Note}"
                                 TextAlignment="Left" />
                    </Border>
                </Grid>
            </Grid>
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Padding="0"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="12"
                           FontStyle="Italic"
                           FontWeight="Bold"
                           Text="Mijoz hisobi:" />

                <TextBlock Grid.Row="1"
                           VerticalAlignment="Center"
                           Text="Joriy:" />
                <TextBox x:Name="beginBalans"
                         Grid.Row="1"
                         Margin="35,2,2,2"
                         Padding="0"
                         HorizontalAlignment="Right"
                         Background="Transparent"
                         BorderThickness="0"
                         FontSize="12"
                         IsReadOnly="True"
                         IsTabStop="False"
                         Text="{Binding TotalAmountWithUserBalance, StringFormat={}{0:N2}}" />

                <TextBlock Grid.Row="2"
                           VerticalAlignment="Center"
                           Text="Qoldiq:" />
                <TextBox x:Name="lastBalans"
                         Grid.Row="2"
                         Margin="35,2,2,2"
                         Padding="0"
                         HorizontalAlignment="Right"
                         Background="Transparent"
                         BorderThickness="0"
                         FontSize="12"
                         IsReadOnly="True"
                         Text="{Binding Customer.Balance, StringFormat={}{0:N2}}" />

                <TextBlock Grid.Row="3"
                           VerticalAlignment="Center"
                           Text="Telefon:" />
                <TextBox x:Name="tel"
                         Grid.Row="3"
                         Margin="42,2,2,2"
                         Padding="0"
                         HorizontalAlignment="Right"
                         Background="Transparent"
                         BorderThickness="0"
                         FontSize="12"
                         IsReadOnly="True"
                         IsTabStop="False"
                         Text="{Binding Customer.Phone}" />
            </Grid>
        </Grid>

        <!--== Kiritilayotgan Sale Item ma'lumotlari qatori ==-->
        <Grid Grid.Row="2"
              Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"
                                  MaxWidth="120" />
                <ColumnDefinition Width="1.5*"
                                  MinWidth="100" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Mahsulot kodi  -->

            <controls:FloatingComboBox x:Name="cbxProductCode"
                                       Margin="10,0,2,0"
                                       IsEditable="True"
                                       IsTextSearchEnabled="True"
                                       ItemsSource="{Binding AvailableProducts}"
                                       DisplayMemberPath="Code"
                                       Label="Kodi"
                                       SelectedItem="{Binding CurrentSaleItem.Product}"/>



            <!--  Mahsulot nomi  -->
            <controls:FloatingComboBox x:Name="cbxProductName"
                                       Grid.Column="1"
                                       Margin="2,0"
                                       IsEditable="True"
                                       IsTextSearchEnabled="True"
                                       ItemsSource="{Binding AvailableProducts}"
                                       DisplayMemberPath="Name"
                                       Label="Nomi"
                                       SelectedItem="{Binding CurrentSaleItem.Product}"/>

            <!--  Razmer  -->
            <controls:FloatingComboBox x:Name="cbxRazmerType"
                                       Grid.Column="2"
                                       Margin="2,0"
                                       IsEditable="True"
                                       IsTextSearchEnabled="True"
                                       ItemsSource="{Binding CurrentSaleItem.Product.ProductTypes}"
                                       DisplayMemberPath="Type"
                                       Label="Turi"
                                       SelectedItem="{Binding CurrentSaleItem.ProductType}"/>

            <!--  Razmer soni  -->
            <controls:FloatingInput x:Name="tbxRazmerCount"
                                    Grid.Column="3"
                                    Margin="2,0"
                                    Label="Razmer soni"
                                    Text="{Binding CurrentSaleItem.BundleCount, UpdateSourceTrigger=PropertyChanged}" />
            <!--  Jami soni  -->
            <controls:FloatingInput x:Name="tbxQuantity"
                                    Grid.Column="4"
                                    Margin="2,0"
                                    IsHitTestVisible="False"
                                    Label="Jami soni"
                                    Text="{Binding CurrentSaleItem.TotalCount, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Narxi  -->
            <controls:FloatingInput x:Name="tbxPrice"
                                    Grid.Column="5"
                                    Margin="2,0"
                                    Label="Narxi"
                                    Text="{Binding CurrentSaleItem.UnitPrice, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Jami summa  -->
            <controls:FloatingInput x:Name="tbxSum"
                                    Grid.Column="6"
                                    Margin="2,0"
                                    IsHitTestVisible="False"
                                    Label="Jami summa"
                                    Text="{Binding CurrentSaleItem.Amount, UpdateSourceTrigger=PropertyChanged}" />
            <Button x:Name="addButton"
                    Grid.Column="7"
                    Height="30"
                    Margin="2,0,7,0"
                    md:ButtonAssist.CornerRadius="4"
                    Background="{DynamicResource OtherBackground}"
                    Command="{Binding AddCommand}"
                    Content="Qo'shish"
                    FontSize="14" />
        </Grid>
        <Grid Grid.Row="3"
              Margin="0,5,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="67*" />
                <ColumnDefinition Width="93*" />
            </Grid.ColumnDefinitions>
            <DataGrid x:Name="dataGrid"
                      Grid.ColumnSpan="2"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="True"
                      FontSize="14"
                      ItemsSource="{Binding SaleItems}"
                      SelectionMode="Single"
                      SelectionUnit="FullRow">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="*"
                                        MinWidth="80"
                                        Binding="{Binding Product.Code}"
                                        Header="Kod"
                                        IsReadOnly="True" />
                    
                    <DataGridTextColumn Width="1.5*"
                                        MinWidth="100"
                                        Binding="{Binding Product.Name}"
                                        Header="Nomi"
                                        IsReadOnly="True" />
                    
                    <DataGridTextColumn Width="*"
                                        Binding="{Binding ProductType.Type}"
                                        Header="Razmer"
                                        IsReadOnly="True" />
                    
                    <DataGridTextColumn Width="*"
                                        Binding="{Binding BundleCount, StringFormat={}{0:N0}}"
                                        Header="Razmer soni"
                                        IsReadOnly="True" />
                    
                    <DataGridTextColumn Width="*"
                                        Binding="{Binding TotalCount, StringFormat={}{0:N0}}"
                                        Header="Jami soni"
                                        IsReadOnly="True" />
                    
                    <DataGridTextColumn Width="*"
                                        Binding="{Binding UnitPrice, StringFormat={}{0:N2}}"
                                        Header="Narxi" />
                    
                    <DataGridTextColumn Width="*"
                                        Binding="{Binding Amount, StringFormat={}{0:N2}}"
                                        Header="Jami summa"
                                        IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <StackPanel Grid.Row="4"
                    Margin="8 0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">

            <Button x:Name="submitButton"
                    md:ElevationAssist.Elevation="Dp24"
                    Background="{StaticResource SuccessButtonBackground}"
                    BorderBrush="{StaticResource SuccessButtonBorder}"
                    Command="{Binding SubmitCommand}"
                    Content="Yuborish"
                    Foreground="{StaticResource SuccessButtonForeground}" />
        </StackPanel>

    </Grid>
</Page>

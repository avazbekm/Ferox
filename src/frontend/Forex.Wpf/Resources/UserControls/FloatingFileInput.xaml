<UserControl
    x:Class="Forex.Wpf.Resources.UserControls.FloatingFileInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Forex.Wpf.Resources.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="30"
    d:DesignHeight="32"
    d:DesignWidth="100"
    mc:Ignorable="d">

	<Grid>
		<TextBlock HorizontalAlignment="Center" 
                    Style="{StaticResource FloatingLabelStyle}"
                    Tag="{Binding ElementName=input}"
                    Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}" />

		<Border Height="30"
                Padding="5,0"
                VerticalAlignment="Bottom"
                BorderBrush="{DynamicResource PrimaryTextColor}"
                BorderThickness="1"
                CornerRadius="4">
			<Grid>
				<TextBox x:Name="input" 
                        VerticalContentAlignment="Center"
                        Background="{DynamicResource InputBackground}"
                        IsReadOnly="True"
                        BorderThickness="0"
                        Style="{x:Null}"
                        Text="{Binding FileName, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True}" />

				<Button x:Name="button"
                        Padding="6,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="BtnBrowse_Click"
                        Content="📁"
                        Foreground="Black"
                        ToolTip="Fayl tanlash" />
			</Grid>
		</Border>
	</Grid>
</UserControl>

<UserControl x:Class="Forex.Wpf.Resources.UserControls.FloatingComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <!-- Floating label -->
        <TextBlock Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Style="{StaticResource FloatingLabelStyle}"
                   Tag="{Binding ElementName=comboBox}"
                   IsHitTestVisible="False"
                   Panel.ZIndex="1"/>

        <!-- ComboBox -->
        <ComboBox x:Name="comboBox"
                  Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                  IsEditable="True"
                  Height="32"
                  Padding="4"
                  BorderThickness="1"
                  BorderBrush="Gray"/>
        
    </Grid>
</UserControl>

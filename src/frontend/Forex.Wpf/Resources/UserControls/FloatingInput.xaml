<UserControl x:Class="Forex.Wpf.Resources.UserControls.FloatingInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <!-- Floating label -->
        <TextBlock Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Style="{StaticResource FloatingLabelStyle}"
                   Tag="{Binding ElementName=inputBox}"
                   IsHitTestVisible="False"
                   Panel.ZIndex="1"/>

        <!-- Input -->
        <TextBox x:Name="inputBox"
                 Style="{x:Null}"
                 Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                 Height="32"
                 VerticalContentAlignment="Center"
                 BorderThickness="1"
                 BorderBrush="Gray"
                 Background="Transparent"/>


    </Grid>
</UserControl>

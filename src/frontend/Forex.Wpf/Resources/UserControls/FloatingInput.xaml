<UserControl
    x:Class="Forex.Wpf.Resources.UserControls.FloatingInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="30"
    d:DesignHeight="32"
    d:DesignWidth="100"
    mc:Ignorable="d">

    <Grid>
        <!--  Floating label  -->
        <TextBlock
            Panel.ZIndex="1"
            IsHitTestVisible="False"
            Style="{StaticResource FloatingLabelStyle}"
            Tag="{Binding ElementName=inputBox}"
            Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}" />

        <!--  Input  -->
        <TextBox
            x:Name="inputBox"
            VerticalContentAlignment="Center"
            Background="Transparent"
            BorderBrush="Gray"
            BorderThickness="1"
            Style="{x:Null}"
            Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</UserControl>

<UserControl
    x:Class="Forex.Wpf.Resources.UserControls.UserCalendar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Forex.Wpf.Resources.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d">
    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>

        <!--  TextBox taraf  -->
        <Border
            Background="Transparent"
            BorderBrush="Black"
            BorderThickness="1,1,0,1"
            CornerRadius="4 0 0 4">
            <TextBox
                x:Name="dateTextBox"
                Padding="0"
                TextAlignment="Right"
                HorizontalAlignment="Center"
                md:HintAssist.Hint="{Binding Hint, RelativeSource={RelativeSource AncestorType=local:UserCalendar}}"
                BorderThickness="0" />
        </Border>

        <!--  kalendar iconkasi  -->
        <Border
            Grid.Column="1"
            BorderBrush="Black"
            BorderThickness="0,1,1,1"
            CornerRadius="0 4 4 0">
            <Button
                Padding="0"
                VerticalAlignment="Center"
                md:ButtonAssist.CornerRadius="0"
                Background="Transparent"
                BorderThickness="0"
                Click="OpenCalendar_Click"
                Content="📅"
                IsTabStop="False" />
        </Border>

        <!--  Calendar popup  -->
        <Popup
            x:Name="calendarPopup"
            PlacementTarget="{Binding ElementName=dateTextBox}"
            StaysOpen="False">
            <Border
                BorderBrush="Aqua"
                BorderThickness="1"
                CornerRadius="4">
                <Calendar x:Name="calendar" SelectedDatesChanged="Calendar_SelectedDatesChanged" />
            </Border>
        </Popup>
    </Grid>
</UserControl>

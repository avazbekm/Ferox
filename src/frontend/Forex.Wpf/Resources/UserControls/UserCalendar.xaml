<UserControl x:Class="Forex.Wpf.Resources.UserControls.UserCalendar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Forex.Wpf.Resources.UserControls"
             mc:Ignorable="d" >
    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>

        <!-- TextBox taraf -->
        <Border Background="Transparent"
                CornerRadius="4,0,0,4">
            <!-- faqat chap radius -->
            <TextBox x:Name="dateTextBox"
                     BorderThickness="0"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch"
                     HorizontalContentAlignment="Right"
                     Margin="0 0 5 0"
                     md:HintAssist.Hint="{Binding Hint, RelativeSource={RelativeSource AncestorType=local:UserCalendar}}" />
        </Border>

        <!-- Button taraf -->
        <Border Grid.Column="1"
                Background="Transparent"
                CornerRadius="0,4,4,0">
            <!-- faqat o‘ng radius -->
            <Button Content="📅"
                    Background="Transparent"
                    BorderThickness="0"
                    md:ButtonAssist.CornerRadius="0"
                    Padding="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="OpenCalendar_Click"
                    IsTabStop="False"/>
        </Border>

        <!-- Calendar popup -->
        <Popup x:Name="calendarPopup" PlacementTarget="{Binding ElementName=dateTextBox}" StaysOpen="False">
            <Border BorderBrush="Aqua" BorderThickness="1" CornerRadius="4">
                <Calendar x:Name="calendar" SelectedDatesChanged="Calendar_SelectedDatesChanged"/>
            </Border>
        </Popup>
    </Grid>
</UserControl>
